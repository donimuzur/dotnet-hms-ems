@model Sampoerna.EMS.Website.Models.Reversal.ReversalIndexViewModel

<table id="ReversalTable" class="table table-striped table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="toggle-row"> Action </th>
            <th> Production Date </th>
            <th> Plant </th>
            <th> Fa Code </th>
            <th> Reversal </th>
        </tr>

    </thead>
    <thead class="filters">
        <tr>
            <th> Filter </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Detail)
        {
            <tr>
                <td class="action">
                    <a href="@Url.Action("Detail", "Reversal", new { id = item.ReversalId })" data-tooggle="tooltip" data-placement="top" title="Detail"><i class=" fa fa-eye"></i></a>
                    @if (Model.IsNotViewer)
                    {
                        <a href="@Url.Action("Edit", "Reversal", new { id = item.ReversalId })" data-tooggle="tooltip" data-placement="top" title="Edit"><i class=" fa fa-pencil-square-o"></i></a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionDateDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Werks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FaCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReversalQty)
                </td>

            </tr>
        }
    </tbody>
</table>