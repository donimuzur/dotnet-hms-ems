@using Sampoerna.EMS.Core
@model Sampoerna.EMS.Website.Models.CK5.CK5IndexViewModel

<table id="ck5Table" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="toggle-row"> Filter </th>
            <th>Document</th>
            <th>STO Number</th>
            @if (Model.Ck5Type == Enums.CK5Type.Export)
            {
                <th>Invoice Number</th>
            }
            <th>Qty - Type of Packaging</th>
            <th>POA</th>
            <th>Source Plant</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <thead class="filters">
        <tr>
            <th> Action</th>
            <th></th>
            <th></th>
            @if (Model.Ck5Type == Enums.CK5Type.Export)
            {
                <th></th>
            }
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model.DetailsList)
        {
            <tr>
                <td class="action">
                    <a href="@Url.Action("DetailsView", "CK5", new { id = item.Ck5Id })" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-eye"></i></a>
                    @if (Model.IsNotViewer){
                        if (Model.IsCompletedType)
                        {
                            <a href="@Url.Action("Details", "CK5", new {id = item.Ck5Id})" data-toggle="tooltip" data-placement="top" title="Edit"> <i class="fa fa-pencil-square-o"></i></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Edit", "CK5", new {id = item.Ck5Id})" data-toggle="tooltip" data-placement="top" title="Edit"> <i class="fa fa-pencil-square-o"></i></a>
                        }
                    }
                </td>
                <td>@Html.DisplayFor(model => item.DocumentNumber)</td>
                <td>@Html.DisplayFor(model => item.StoNumber)</td>
                @if (Model.Ck5Type == Enums.CK5Type.Export)
                {
                    <td>@Html.DisplayFor(model => item.InvoiceNumber)</td>
                }
                <td class="number">@Html.DisplayFor(model => item.QtyPackaging)</td>
                <td>
                    @Html.DisplayFor(model => item.POA)
                </td>
                <td>@Html.DisplayFor(model => item.SourcePlant)</td>
                <td>@Html.DisplayFor(model => item.DestinationPlant)</td>
                <td>@Html.DisplayFor(model => item.Status)</td>
                <td class="last">@Html.DisplayFor(model => item.DocumentCreatedDate)</td>
            </tr>
           
        }
    </tbody>
</table>

