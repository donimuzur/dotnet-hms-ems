                else if ('@Model.Ck5Type' == '@Enums.CK5Type.Intercompany.ToString()')
                    location.href = '@Url.Action("IndexIntercompany", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.DomesticAlcohol.ToString()')
                    location.href = '@Url.Action("IndexDomesticAlcohol", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.Export.ToString()')
                    location.href = '@Url.Action("CK5Export", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.PortToImporter.ToString()')
                    location.href = '@Url.Action("CK5Import", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.ImporterToPlant.ToString()')
                    location.href = '@Url.Action("CK5ImportPlant", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.Manual.ToString()')
                    location.href = '@Url.Action("CK5Manual", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.MarketReturn.ToString()')
                    location.href = '@Url.Action("CK5MarketReturn", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.Return.ToString()')
                    location.href = '@Url.Action("CK5TriggerSto", "CK5")';
                else if ('@Model.Ck5Type' == '@Enums.CK5Type.Waste.ToString()')
                    location.href = '@Url.Action("CK5Waste", "CK5")';

            });


            OnReadyFunction('@Model.Ck5Type.ToString()');
            //enable upload
            $('#btnUploadInfo').enable();
            $('#CK5UploadSubmitBtn').enable();

            $("#KppBcCity option").each(function() {
                if ($(this).text() == $("input[name='KppBcCityName']").val()) {
                    $(this).attr('selected', 'selected');
                }
            });


            $("#btnCancelDocument").click(function() {
                $('#btnConfirmCancel').attr('disabled', 'disabled');

                $('#Comment').val('');

                $('#Ck5ModalCancel').modal('show');

            });

            $('#Comment').bind('input propertychange', function() {

                $('#btnConfirmCancel').attr('disabled', 'disabled');

                if (this.value.length) {
                    $('#btnConfirmCancel').removeAttr('disabled');
                }
            });

            $("select#RequestType option[value='Dibayar']").replaceWith("<optgroup label='Dibayar'>");
            $("select#RequestType option[value='TidakDipungut']").replaceWith("<optgroup label='Tidak Dipungut'>");
            $("select#RequestType option[value='Dibebaskan']").replaceWith("<optgroup label='Dibebaskan'>");
            $("select#RequestType option[value='Lainnya']").replaceWith("<optgroup label='Lainnya'>");

            $('#btn-changelog-export-xls').click(function() {
                location.href = '@Url.Action("ExportXls", "CK5", new {ck5Id = Model.Ck5Id})';
            });

            $("#btnSave").click(function() {

                if (ValidateCk5Form('@Model.Ck5Type.ToString()')) {
                    $('#Command').val('Save');
                    $('#EditCk5Forms').submit();
                }

            });


            $('#CK5UploadSubmitBtn').click(function() {
                if ('@Model.Ck5Type.ToString()' == "Waste") {
                    GenerateXlsCk5Material('@Url.Action("UploadFileCk5Waste", "CK5")', '@Model.Ck5Type.ToString()');
                } else {
                    GenerateXlsCk5Material('@Url.Action("UploadFile", "CK5")', '@Model.Ck5Type.ToString()');
                }

            });


            var sourcePlant = $("#SourcePlantId").find("option:selected").val();

            $("#uploadMaterialPlant").val(sourcePlant);

            ajaxGetListMaterial('@Url.Action("GetListMaterials", "CK5")', { plantId: sourcePlant, ck5type: '@Model.Ck5Type' });

            OnChangeDestinationPlant();
            OnChangeSourcePlant();

            if ('@Model.Ck5Type.ToString()' == '@Enums.CK5Type.Manual.ToString()') {

                if ('@Model.Ck5ManualType.ToString()' == '@Enums.Ck5ManualType.Trial.ToString()') {

                    $('#IsFreeTextSource').attr("disabled", true);
                    $('#IsFreeTextDestination').attr("disabled", true);
                    if ('@Model.IsReducePbck1Ck5Trial' == 'True') {
                        $('#IsReducePbck1Ck5Trial').prop('checked', true);
                    }

                } else if ('@Model.IsFreeTextSource' == 'True') {
                    $('#IsFreeTextDestination').attr("disabled", true);

                } else if ('@Model.IsFreeTextDestination' == 'True') {
                    $('#IsFreeTextSource').attr("disabled", true);
                }
            }

        });

        function OnChangeDestinationPlant() {
            $("#DestPlantId").change(function() {
                ResetPbck1Link();
                if ($("#DestPlantId").length) {
                    var destPlant = $(this).find("option:selected").val();
                    var isUseDest = false;
                    if ('@Model.Ck5Type.ToString()' == "PortToImporter" || '@Model.Ck5Type.ToString()' == "DomesticAlcohol") {
                        isUseDest = true;
                        RemoveTable();
                    } else if ('@Model.Ck5Type.ToString()' == '@Enums.CK5Type.Manual.ToString()') {
                        if ($('#IsFreeTextSource').is(':checked')) {
                            isUseDest = true;
                            RemoveTable();
                        }
                    }

                    if (destPlant == '') {
                        $("input[name='DestNpwp']").val('');
                        $("input[name='DestNppbkcId']").val('');
                        $("input[name='DestCompanyCode']").val('');
                        $("input[name='DestCompanyName']").val('');
                        $("*[name='DestAddress']").val('');
                        $("input[name='DestKppbcName']").val('');
                        $("input[name='DestPlantName']").val('');

                        $("input[name='PbckDecreeId']").val('');
                        $("input[name='PbckDecreeNumber']").val('');
                        $("input[name='PbckDecreeDate']").val('');
                        $("input[name='Pbck1QtyApproved']").val('0');
                        $("input[name='Ck5TotalExciseable']").val('0');
                        $("input[name='RemainQuota']").val('0');

                        $("input[name='PbckUom']").val('');

                        if (isUseDest) {
                            $("input[name='KppBcCity']").val('');
                            $("input[name='CeOfficeCode']").val('');
                        }

                    } else {


                        var submissionDate = $('#SubmissionDate').val();
                        if (submissionDate == '')
                            submissionDate = '@DateTime.Now';

                        var sourcePlant = $("#SourcePlantId").find("option:selected").val();
                        var goodTypeGroupId = $("#GoodType").val();
                        //var Ck5_Type = $("#Ck5Type").val();
                        var sourceNppbkcId = $("#SourceNppbkcId").val();

                        ajaxGetDestPlantDetails('@Url.Action("GetSourcePlantDetailsAndPbckItem", "CK5")', { sourcePlantId: sourcePlant, destPlantId: destPlant, sourceNppbkcId: sourceNppbkcId, submissionDate: submissionDate, goodtypegroupid: goodTypeGroupId, ck5Type: '@Model.Ck5Type' });


                    }
                }
            });
        }


        $("#GoodType").change(function() {
            ResetPbck1Link();
            var goodTypeGroupId = $("#GoodType").val();
            var sourcePlant = $("#SourcePlantId").find("option:selected").val();
            var destPlant = $("#DestPlantId").find("option:selected").val();
            var sourceNppbkcId = $("#SourceNppbkcId").val();
            var Ck5_Type = $("#Ck5Type").val();
            if (destPlant == '' || sourcePlant == '' || destPlant == '') {
                $("input[name='PbckDecreeId']").val('');
                $("input[name='PbckDecreeNumber']").val('');
                $("input[name='PbckDecreeDate']").val('');
                $("input[name='Pbck1QtyApproved']").val('0');
                $("input[name='Ck5TotalExciseable']").val('0');
                $("input[name='RemainQuota']").val('0');
                $("input[name='PbckUom']").val('');
            } else {
                var submissionDate = $('#SubmissionDate').val();
                if (submissionDate == '')
                    submissionDate = '@DateTime.Now';


                ajaxGetDestPlantDetails('@Url.Action("GetSourcePlantDetailsAndPbckItem", "CK5")', { sourcePlantId: sourcePlant, destPlantId: destPlant, sourceNppbkcId: sourceNppbkcId, submissionDate: submissionDate, goodtypegroupid: goodTypeGroupId, ck5Type: '@Model.Ck5Type' });

            }

        });

        $('#SubmissionDate').change(function() {
            ResetPbck1Link();
            var goodTypeGroupId = $("#GoodType").val();
            var sourcePlant = $("#SourcePlantId").find("option:selected").val();
            var destPlant = $("#DestPlantId").find("option:selected").val();
            var sourceNppbkcId = $("#SourceNppbkcId").val();
            if (destPlant == '' || sourcePlant == '' || destPlant == '') {
                $("input[name='PbckDecreeId']").val('');
                $("input[name='PbckDecreeNumber']").val('');
                $("input[name='PbckDecreeDate']").val('');
                $("input[name='Pbck1QtyApproved']").val('0');
                $("input[name='Ck5TotalExciseable']").val('0');
                $("input[name='RemainQuota']").val('0');
                $("input[name='PbckUom']").val('');
            } else {
                var submissionDate = $('#SubmissionDate').val();
                if (submissionDate == '')
                    submissionDate = '@DateTime.Now';


                ajaxGetDestPlantDetails('@Url.Action("GetSourcePlantDetailsAndPbckItem", "CK5")', { sourcePlantId: sourcePlant, destPlantId: destPlant, sourceNppbkcId: sourceNppbkcId, submissionDate: submissionDate, goodtypegroupid: goodTypeGroupId, ck5Type: '@Model.Ck5Type' });

            }
        });

        function OnChangeSourcePlant() {
            $("#SourcePlantId").change(function() {
                ResetPbck1Link();
                if ($("#SourcePlantId").length) {
                    var sourcePlant = $(this).find("option:selected").val();

                    RemoveTable();

                    if (sourcePlant == '') {
                        $("input[name='SourceNpwp']").val('');
                        $("input[name='SourceNppbkcId']").val('');
                        $("input[name='SourceCompanyCode']").val('');
                        $("input[name='SourceCompanyName']").val('');
                        $("*[name='SourceAddress']").val('');
                        $("input[name='SourceKppbcName']").val('');
                        $("input[name='SourcePlantName']").val('');
                        //enable upload
                        $('#btnUploadInfo').enable(false);
                        $('#CK5UploadSubmitBtn').enable(false);

                        $("input[name='KppBcCity']").val('');
                        $("input[name='CeOfficeCode']").val('');


                    } else {

                        var isnppbkcImport = $("input[name='FLAG_NPPBKC_IMPORT']").is(":checked");
                        ajaxGetPlantDetails('@Url.Action("GetSourcePlantDetails", "CK5")', { plantId: sourcePlant, ck5type: '@Model.Ck5Type', isNppbkcImport: isnppbkcImport });

                        ChangeBackSourceMaterial(sourcePlant, '@Url.Action("GetOriginalPlant", "CK5")');
                    }
                }
            });
        }


        $("#btnSubmitDocument").click(function() {
            if (ValidateCk5Form('@Model.Ck5Type.ToString()')) {
                $('#Ck5Modal').modal('show');
            }

        });

