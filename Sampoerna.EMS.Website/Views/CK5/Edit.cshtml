    //    if ($("#KppBcCity").length) {
    //        var nppBkcCity = $(this).find("option:selected").val();
    //        var cityName = $('option:selected', $(this)).text();
    //        if (nppBkcCity == '') {
    //            $("input[name='CeOfficeCode']").val('');
