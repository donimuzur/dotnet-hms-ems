    //            $("input[name='KppBcCityName']").val(cityName);

                 
    //             }
    //    }

    //});
    
    $("#btnSubmitDocument").click(function () {
        $('#Ck5Modal').modal('show');
        @*var r = confirm("Submit Documents ?");
            if (r == true) {
                window.location = "@Url.Action("Delete", "CK5", new {id = @Model.Ck5Id})";
            }*@
    });

    $("#btnSubmitConfirm").click(function () {
        window.location = "@Url.Action("SubmitDocument", "CK5", new { id = @Model.Ck5Id })";
    });
    
        $("#CountryCode").change(function () {
            if ($("#CountryCode").length) {
                var countryName = $('option:selected', $(this)).text();
                if (countryName == '') {
                    $("input[name='CountryName']").val('');
                   
                } else {
                    $("input[name='CountryName']").val(countryName);
                 
                     }
            }

        });
        
        function printPreview(url) {

            window.open(url, 'popup', 'width=800,height=600,toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=no,resizable=no');

        }
</script>
