    <script type="text/javascript" language="javascript">

       
        $(document).ready(function () {

            setupDataTables(true);
           
            $('#menuCk5MarketReturnOpenDocuments').removeClass('open');

            $('#menuCk5MarketReturnReport').addClass('open');
            $('#menuCk5MarketReturnReport').addClass('active');
            
