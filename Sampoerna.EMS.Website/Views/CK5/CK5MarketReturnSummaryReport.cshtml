                                <div class="row">
                                    <label class="col-md-4">CK-2 No</label>
                                    <div class="col-md-8">
                                        @(Model.SearchView.Ck2NoList == null ? Html.DropDownList("dropdown-name", Enumerable.Empty<SelectListItem>())
