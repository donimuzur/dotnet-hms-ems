                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.Content, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "3" })Content
