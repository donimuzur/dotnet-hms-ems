                                                        @Html.CheckBoxFor(model => model.ExportModel.Tariff, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "5" })Tariff
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.Ck5MarketReturnQty, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "6" })CK-5 Market Return Qty
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.FiscalYear, new { @class = "checkbox checkexport", @datacolumn = "7" })Fiscal Year
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
