                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.FaCode, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "1" })Fa Code
                                                    </label>
                                                </div>

                                                @*//start*@
                                                <div class="checkbox">
                                                    <label>
