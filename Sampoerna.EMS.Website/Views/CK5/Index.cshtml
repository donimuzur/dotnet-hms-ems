                 }
             });

        $('#ck5TableDomesticAlcohol .filters3 th').each(function () {
            var idx = $(this).index();
            if (idx != 0) {
                $(this).html('<input type="text" placeholder="Search" style="width:100%" />');
            }
        });

        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters3 th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });

       
    }
    
</script>

