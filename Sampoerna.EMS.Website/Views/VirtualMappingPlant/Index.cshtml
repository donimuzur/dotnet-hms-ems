@model Sampoerna.EMS.Website.Models.VirtualMappingPlant.VirtualMappingPlantIndexViewModel

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();

            $('#MenuMasterVirtualMappingPlant').addClass('active');
        });
    </script>
}

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Virtual Plant Mapping</h3>
            <div class="action-button new">
                <a href="@Url.Action("Create", "VirtualMappingPlant")">
                    <button class="btn btn-blue">NEW</button>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
          

                <div class="table-container">

                    <table id="mydata" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="toggle-row"> Filter </th>
                                <th> Company </th>
                                <th> Import Virtual Plant </th>
                                <th> Export Virtual Plant</th>
                            </tr>

                        </thead>
                        <thead class="filters">
                            <tr>
                                <th> Action </th>
                                <th> Company </th>
                                <th> Import Virtual Plant </th>
                                <th> Export Virtual Plant </th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td class="action">
                                        <a href="@Url.Action("Details", "VirtualMappingPlant", new { id = item.VirtualPlantMapId })"><i class="fa fa-eye"></i></a>
                                        <a href="@Url.Action("Edit", "VirtualMappingPlant", new { id = item.VirtualPlantMapId })"><i class="fa fa-pencil-square-o"></i></a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImportPlanName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExportPlanName)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
           
        </div>
    </div>
</div>


