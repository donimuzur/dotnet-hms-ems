@model Sampoerna.EMS.Website.Models.VirtualMappingPlantViewModel

@section styles
    {
    <link rel="stylesheet" type="text/css" href="../../Scripts/DataTables-1.10.7/media/css/jquery.dataTables.css">
}

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 1) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" />');
                }
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
        });
    </script>
}


@{
    ViewBag.Title = "VIRTUAL MAPPING PLANT";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            <div class="action-button new">
                @*<a href="@Url.Action("Create", "Virtual")">
                    <button class="btn btn-blue">NEW</button>
                </a>*@
                <a data-toggle="modal" data-target=".menu-maping-type"><button class="btn btn-blue">NEW</button></a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-wrapper">
                <table id="mydata" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th> NO  </th>
                            <th> Action </th>
                            <th> Company </th>
                            <th> Import Virtual Plant </th>
                            <th> Export Virtual Plant</th>
                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> NO  </th>
                            <th> Action </th>
                            <th> Company </th>
                            <th> Import Virtual Plant </th>
                            <th> Export Virtual Plant </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Company)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ImportVitualPlant)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExportVirtualPlant)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ExportPlantId)
                                </td>*@

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade main-menu-child menu-maping-type" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h3>Maping Virtual Plant Form</h3>
            </div>
            <div class="modal-body form">
                <form class="form-excise" role="form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <label class="col-md-4">Company</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(m => m.CompanyList, Model.CompanyList, "Choose One", new { @class = "form-control" })
                                    @*<select class="form-control">
                                        <option>PT HM Sampoerna Tbk</option>
                                        <option>PT HM Sampoerna Tbk</option>
                                    </select>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <label class="col-md-4">Import Virtual Plant</label>
                                <div class="col-md-8">
                                    <select class="form-control">
                                        <option></option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <label class="col-md-4">Export Virtual Plant</label>
                                <div class="col-md-8">
                                    <select class="form-control">
                                        <option></option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-blue">Save</button>
                <button type="button" class="btn btn-grey" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
