@model Sampoerna.EMS.Website.Models.CompanyViewModel


@section styles
    {
    
}


@section scripts
    {
    <link rel="stylesheet" type="text/css" href="../../Scripts/DataTables-1.10.7/media/css/jquery.dataTables.css">
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="../../Scripts/colReorderWithResize.js"></script>

    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var title = $('#example thead th').eq($(this).index()).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
        });

    </script>

}

@{
    ViewBag.Title = "Company";

}

<td class="container-wrap title-page">

    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            <div class="action-button new">

            </div>
        </div>
    </div>


<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="mydata" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Company ID</th>
                            <th>BUKRS</th>
                            <th>BUKRSTXT</th>
                            <th>Date</th>
                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th>Company ID</th>
                            <th>BUKRS</th>
                            <th>BUKRSTXT</th>
                            <th>Date</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocumentBukrs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocumentBukrstxt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
