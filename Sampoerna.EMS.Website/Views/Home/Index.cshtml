@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>EMS - Excise Management System</title>
    <link rel="shortcut icon" href="../../Content/assets/images/favicon.png" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <!-- Load the site CSS after Boostrap's to override -->
    <link href="~/Content/css/main.min.css" rel="stylesheet" media="screen" />

    <link href="~/Content/css/vendors/yamm.css" rel="stylesheet" />
    <link href="~/Content/css/vendors/font-awesome.min.css" rel="stylesheet" />
    <!-- Load jQuery -->
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <!-- Load Modernizr.js -->
    <script src="~/Scripts/modernizr.min.js"></script>
    <!-- Load Bootstrap JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js/vendors/bootstrap-datepicker.min.js"></script>
    <!-- Load Fixed Header table JavaScript -->
    <script src="~/Scripts/js/vendors/jquery.fixedheadertable.min.js"></script>
</head>
<body class="main-page">
    <div class="excise-site main-menu">
        <div class="main-header">
            <div class="main-logo">
                <img src="~/Content/assets/images/logo-large.png" alt="">
            </div>
            <h3>Excise Management System</h3>
        </div>
        <div class="main-menu-content">
            <div class="excise-menu" data-toggle="modal" data-target=".menu-movement">
                <h3>Excisable Goods Movement</h3>
                <p>
                    - Goods Quota (PBCK-1)<br>
                    - Goods Movement (CK-5)<br>
                    - Goods Usage Report (LACK-1)<br>
                    - Goods Transfer Report (LACK-2)<br>
                    - Production Report (CK-4C)
                </p>
                <div class="icon"></div>
            </div>
            <div class="excise-menu last" data-toggle="modal" data-target=".menu-claimable">
                <h3>Excisable Goods Claimable</h3>
                <p>
                    - Stamp Damage and Return (PBCK-4)<br>
                    - Refund from Production (PBCK-7)<br>
                    - Refund from Market (PBCK-3)<br>
                    - CK-5 Market Return
                </p>
                <div class="icon"></div>
            </div>
            <div class="excise-menu small">
                <h3>Master Data</h3>
                <div class="icon"></div>
            </div>
            <div class="excise-menu small last">
                <h3>Setting</h3>
                <div class="icon"></div>
            </div>
        </div>
    </div>
    <div class="modal fade main-menu-child menu-movement" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h3>Excisable Goods Claimable</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-15">
                            <a href="@Url.Action("Index","PBCK")" class="child-menu">
                                PBCK-1
                            </a>
                        </div>
                        <div class="col-md-15">
                            <a href="#" class="child-menu">
                                CK-5
                            </a>
                        </div>
                        <div class="col-md-15">
                            <a href="#" class="child-menu">
                                LACK-1
                            </a>
                        </div>
                        <div class="col-md-15">
                            <a href="#" class="child-menu">
                                LACK-2
                            </a>
                        </div>
                        <div class="col-md-15">
                            <a href="#" class="child-menu">
                                CK-4C
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade main-menu-child menu-claimable" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h3>Excisable Goods Movement</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="#" class="child-menu">
                                PBCK-4
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="child-menu">
                                PBCK-7
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="child-menu">
                                PBCK-3
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="child-menu">
                                CK-5
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    © 2015 Excise Management System. PT HM Sampoerna, Tbk
                </div>
            </div>
        </div>
    </footer>
    <!-- Load custom.js -->
    <script src="~/Scripts/js/scripts.min.js"></script>
</body>
</html>