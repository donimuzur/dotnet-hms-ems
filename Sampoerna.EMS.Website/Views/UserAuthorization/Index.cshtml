@model Sampoerna.EMS.Website.Models.UserAuthorization.IndexUserAuthorizationViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>User Authorization</h3>
            <div class="action-button new">
                <a href="@Url.Action("Create", "UserAuthorization")"><button class="btn btn-blue">NEW</button></a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="UserAuthorization" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="toggle-row"> Filter </th>
                            <th>BRole</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <thead class="filters">
                        <tr>
                            <td>Action</td>
                            <th>BRole</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Detail)
                        {
                            <tr>
                                <td class="action">
                                    <a href="#" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-eye"></i></a>
                                    <a href="#" data-toggle="tooltip" data-placement="top" title="Edit"> <i class="fa fa-pencil-square-o"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Brole)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.BroleDescription)
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
    @section scripts
{
        <script src="~/Scripts/js/custom.js"></script>
        <script type="text/javascript" language="javascript" class="init">
            $('#MenuUserAuthorization').addClass('active');
            $(document).ready(function() {

                // Setup - add a text input to each footer cell
                $('#UserAuthorization .filters th').each(function() {
                    var idx = $(this).index();
                    if (idx != 0 && idx != 0) {
                        var title = $('#UserAuthorization thead th').eq($(this).index()).text();
                        $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                    }
                });

                // DataTable
                var table = $('#UserAuthorization').DataTable();


                // Apply the search

                table.columns().eq(0).each(function(colIdx) {
                    $('input', $('.filters th')[colIdx]).on('keyup change', function() {
                        table
                            .column(colIdx)
                            .search(this.value)
                            .draw();
                    });
                });

            });
        </script>
    }
