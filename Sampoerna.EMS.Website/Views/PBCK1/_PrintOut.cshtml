@using Sampoerna.EMS.Website.Helpers
@model Sampoerna.EMS.Website.Models.PBCK1.Pbck1ItemViewModel

<div role="tabpanel" class="tab-pane" id="profile">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingPrintHistory">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapsePrintHistory" aria-expanded="true" aria-controls="collapsePrintHistory">
                        Print Out
                    </a>
                </h4>
            </div>
            <div id="collapsePrintHistory" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingPrintHistory">
                <div class="panel-body">
                    <div class="form-excise " role="form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-3">PBCK-1 No</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" value="@Model.Detail.Pbck1Number" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-3">Date</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" value="@DateTime.Now.ToString("dd MMM yyyy HH:mm:ss")" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-3">User</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" value="@Html.UserName()" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-3"></label>
                                    <div class="col-md-9">
                                        @if (Model.AllowPrintDocument)
{
    <a class="btn btn-blue full" onclick="PrintOutClick('@Url.EncryptedAction("PrintOut", "PBCK1", new { id = @Model.Detail.Pbck1Id })', '@Url.Action("AddPrintHistory", "Pbck1")', @Model.Detail.Pbck1Id)">Print</a>
}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container" id="PrintOutHistoryTable">
        @Html.Partial("_PrintHistoryTable")
    </div>
</div>