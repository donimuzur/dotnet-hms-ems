                                        <div class="col-md-4">
                                            @Html.HiddenFor(model => model.Detail.RequestQtyUomId)
                                            @Html.DropDownListFor(model => model.Detail.RequestQtyUomId, Model.UomList, "Select", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
