                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.Detail.Lack1FormYear, Model.YearList, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
