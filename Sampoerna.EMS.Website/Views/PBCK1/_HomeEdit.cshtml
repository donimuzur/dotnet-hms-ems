                                        <label class="col-md-4">LACK-1 To<span class="red">*</span></label>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.Detail.Lack1ToMonthId, Model.MonthList, "", new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DropDownListFor(model => model.Detail.Lack1ToYear, Model.YearList, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
