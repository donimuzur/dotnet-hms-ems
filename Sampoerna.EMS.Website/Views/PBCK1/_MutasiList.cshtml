@model Sampoerna.EMS.Website.Models.PBCK1.Pbck1MonitoringMutasiViewModel

<div id="table-mutasi-preview">
    <table id="monitoringMutasi" class="table table-bordered table-striped js-options-table">
        <thead>
            <tr>
                <th>No</th>
                <th>PBCK-1 Number</th>
                <th>Total PBCK-1 Quota</th>
                <th>Remaining PBCK-1 Quota</th>
                <th>Total Qty of CK-5</th>
                <th>Detail CK-5 Number</th>
                <th>Detail Qty of CK-5</th>
                <th>Qty UOM</th>
                <th>POA Approved by</th>
                <th>Creator</th>
                <th>Supplier Plant ID</th>
                <th>Supplier Company</th>
                <th>Supplier NPPBKC</th>
                <th>Supplier KPPBC</th>
                @*<th>CK5-Type</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int row = 1;

                foreach (var item in Model.DetailsList)
                 {
                     <tr>
                         <td align="center">
                             @row
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.Pbck1Number)
                         </td>
                         <td class ="number">
                             @String.Format("{0:n}", @item.TotalPbck1Quota)
                         </td>
                         <td class="number">
                             @String.Format("{0:n}", @item.QuotaRemaining)
                         </td>
                         <td class="number">
                             @String.Format("{0:n}", @item.Received)
                         </td>
                         <td>
                             @if (item.Ck5List.Any())
                             {
                                 foreach (var ck5 in item.Ck5List)
                                 {
                                     @ck5.DocumentNumber <br />
                                 }
                             }
                             else
                             {
                                 <text>-</text>
                             }
                            
                         </td>
                         <td class="number">
                             @if (item.Ck5List.Any())
                             {
                                 foreach (var ck5 in item.Ck5List)
                                 {
                                     @String.Format("{0:n}", @ck5.GRAND_TOTAL_EX) <br />
                                 }
                             }
                             else
                             {
                                 <text>-</text>
                             }

                         </td>
                         <td align="center">
                             @if (item.Ck5List.Any())
                             {
                                 foreach (var ck5 in item.Ck5List)
                                 {
                                     @ck5.PACKAGE_UOM_ID <br />
                                 }
                             }
                             else
                             {
                                 <text>-</text>
                             }

                         </td>
                         <td>
                             @Html.DisplayFor(model => item.Poa)
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.Creator)
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.SupPlant)
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.SupComp)
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.OriNppbkc)
                         </td>
                         <td>
                             @Html.DisplayFor(model => item.OriKppbc)
                         </td>
                     </tr>
                     row = row + 1;
                 }
            }
        </tbody>

    </table>
</div>