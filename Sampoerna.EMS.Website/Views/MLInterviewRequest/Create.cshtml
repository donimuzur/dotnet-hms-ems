                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <label class="col-md-4">BA Number<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @if (Model.IsDetail || !Model.IsFormSkep)
                                                                    {
                                                                        @Html.TextBox("BANumber", Model.BANumber, new { @class = "form-control", @readonly = "readonly" })
                                                                    }
