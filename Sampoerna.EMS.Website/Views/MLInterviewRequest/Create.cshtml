                                                }
                                                else
                                                {
                                                    @Html.DropDownListFor(model => model.Perihal, Model.Perihal_List, "Select", new { @class = "form-control selectpicker", @id = "opt_perihal", @disabled = "disabled", @data_fieldname = "Perihal" })
