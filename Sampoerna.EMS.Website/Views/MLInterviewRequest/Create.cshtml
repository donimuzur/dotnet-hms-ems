                                                            <label class="col-md-4">KPPBC Address<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextArea("KPPBC_Address", Model.KPPBC_Address, new { @class = "form-control", @readonly = "true", @required = "required", @data_fieldname = "KPPBC Address" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Address</label>
                                                            <div class="col-md-8">
                                                                @Html.TextArea("POAAddress", Model.POAAddress, new { @class = "form-control", @readonly = "true" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Company<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                <select class='form-control selectpicker' id='opt_company' name='Company_ID' required="required" data-fieldname="Company" @HtmlDisabled>
                                                                    <option value='' data-npwp='' data-add=''>Select</option>
