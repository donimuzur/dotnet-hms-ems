@using (Html.BeginForm(actionName, "MLInterviewRequest", FormMethod.Post, new { @id = "SaveIRequestForms", enctype = "multipart/form-data", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    //////////// INIT START ////////////
    @Html.HiddenFor(model => model.Id, new { @id = "txt_hd_id" })
    @Html.HiddenFor(model => model.FormNumber)
    @Html.HiddenFor(model => model.File_Size, new { @id = "txt_hd_filesize" })
    @Html.HiddenFor(model => model.Status, new { @id = "txt_hd_status" })
    @Html.HiddenFor(model => model.StatusKey, new { @id = "txt_hd_statuskey" })
    @Html.HiddenFor(model => model.NPPBKC_ID, new { @id = "txt_hd_nppbkc_id" })
    @Html.HiddenFor(model => model.POAID, new { @id = "txt_hd_poa_id" })
    @Html.HiddenFor(model => model.City, new { @id = "txt_hd_city" })
    @Html.HiddenFor(model => model.City_Alias, new { @id = "txt_hd_cityalias" })
    @Html.HiddenFor(model => model.Text_To, new { @id = "txt_hd_textto" })
    @Html.HiddenFor(model => model.CreatedBy, new { @id = "txt_hd_creator" })
    @Html.HiddenFor(model => model.IsFormReadOnly, new { @id = "txt_hd_isformreadonly" })
    <input type="hidden" id="hd_toggle" />
    <input type="hidden" id="hd_toggle_otherdoc" />
    //////////// INIT END ////////////

    <div class="container-wrap title-page div_interviewrequest">
        <div class="row">
            <div class="col-sm-12">
                <h3>Interview Request Form</h3>
                <label class="status">@Model.Status</label>
                <label class="status" id="div_form_number">@Model.FormNumber</label>
                <div class="action-button">
                    @if (!Model.IsFormReadOnly)
                    {
                        if (Model.Status.ToLower().Contains("draft"))
                        {
                            <input type="button" id="btnSave" class="btn btn-blue" value="Save" />
                        }
                        if (Model.Id != 0 && Model.Id != null && Model.Status.ToLower().Contains("draft"))
                        {
                            <input type="button" class="btn btn-blue" data-toggle="modal" data-target=".submit-modal.interviewrequest" value="Submit" />
                        }
                        if (Model.Id != 0 && Model.Id != null && Model.Status.ToLower().Contains("draft"))
                        {
                            <input type="button" class="btn btn-blue" data-toggle="modal" data-target=".cancel-modal.interviewrequest" value="Cancel Document" />
                        }
                    }
                    else
                    {
                        if (!Model.IsDetail)
                        {
                            if (Model.Status.ToLower().Equals("waiting for poa approval"))
                            {
                            <input type="button" class="btn btn-blue" data-toggle="modal" data-target=".approve-modal.interviewrequest" value="Approve" />
                            <input type="button" class="btn_showmodal_changestatus btn btn-warning" data-toggle="modal" data-target=".modal_ChangeStatus" data-action="Revise" value="Revise" />
                            @*<input type="button" class="btn btn-danger btn_showmodal_changestatus" data-toggle="modal" data-target=".modal_ChangeStatus" data-action="Reject" value="Reject" />*@
                            }
                            else if (Model.Status.ToLower().Equals("waiting for poa skep approval"))
                            {
                            <input type="button" class="btn btn-blue" data-toggle="modal" data-target=".approvefinal-modal.interviewrequest" value="Approve" />
                            <input type="button" class="btn_showmodal_changestatus btn btn-warning" data-toggle="modal" data-target=".modal_ChangeStatus" data-action="ReviseSkep" value="Revise" />
                            @*<input type="button" class="btn btn-danger btn_showmodal_changestatus" data-toggle="modal" data-target=".modal_ChangeStatus" data-action="Reject" value="Reject" />*@
                            }
                            else if (Model.Status.ToLower().Equals("waiting for government approval"))
                            {
                                <input type="button" id="btnSubmitSkep_showmodal" class="hidden" data-toggle="modal" data-target=".submitskep-modal.interviewrequest"/>
                                <input type="button" id="btnSubmitSkep_check" class="btn btn-blue" value="Submit SKEP" />
                                <input type="button" id="btnWithdraw_showmodal" class="btn btn-blue" data-toggle="modal" data-target=".withdraw-modal.interviewrequest" value="Withdraw" />                                
                            }
                        }
                    }

                    <a href="@Url.Action("Index", "MLInterviewRequest")" class="btn btn-grey btn_loader">Back</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">
