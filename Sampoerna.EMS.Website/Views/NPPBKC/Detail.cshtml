@model Sampoerna.EMS.Website.Models.NPPBKC.NppbkcFormModel
@section scripts {
    <script src="~/Scripts/js/scripts.min.js"></script>
    <script type="text/javascript">
        $('#MenuNPPBKC').addClass('active');
        var NppbkcDelete = function () {
            window.location = "@Url.Action("Delete", "NPPBKC", new {id = @Model.Detail.VirtualNppbckId})";


        };
        var confirmDeleteNPPBKC = function () {
            $('#btn-delete-nppbkc').click();
        };
    </script>
}
@{
    ViewBag.Title = "NPPBKC";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="desc">NPPBKC <span>(Nomor Pokok Pengusaha Barang Kena Cukai)</span></h3>
            <div class="action-button">
                <a href="@Url.Action("Index", "NPPBKC")">
                    <button class="btn btn-grey">Back</button>
                </a>
                @if (Model.Detail.Is_Deleted.Equals("No"))
                {
                    <a href="javascript:void(0);" onclick="confirmDeleteNPPBKC() " class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div role="tabpanel">

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#information" aria-controls="information" role="tab" data-toggle="tab">Information</a></li>
                    <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes Log</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="information">
                        <div class="tab-wrapper">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Detail NPPBKC
                                                <i class="fa fa-caret-down"></i>
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <form class="form-excise" role="form">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">NPPBKC ID</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.VirtualNppbckId, new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">City</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.City, new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">Address 1</label>
                                                            <div class="col-md-9">
                                                                @Html.TextAreaFor(model => model.Detail.Address1, new { @class = "form-control", rows = "5", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3 long">Region Office of DGCE</label>
                                                            <div class="col-md-9">
                                                                @Html.TextAreaFor(model => model.Detail.RegionOfficeOfDGCE, new { @class = "form-control", rows = "5", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">Address 2</label>
                                                            <div class="col-md-9">
                                                                @Html.TextAreaFor(model => model.Detail.Address2, new { @class = "form-control", rows = "5", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">Text to</label>
                                                            <div class="col-md-9">
                                                                @Html.TextAreaFor(model => model.Detail.TextTo, new { @class = "form-control", rows = "5", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">KPPBC ID</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.KppbcId, new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">City Alias</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.CityAlias, new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3">Region</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.Region, new { @class = "form-control", disabled = "disabled" })

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3 long">Account Number</label>
                                                            <div class="col-md-9">
                                                                @Html.TextBoxFor(model => model.Detail.AcountNumber, new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3 long">Start Date</label>
                                                            <div class="col-md-9">
                                                                <div class="row">
                                                                    <div class="col-md-8">
                                                                        @Html.TextBoxFor(model => model.Detail.StartDate, "{0:dd MMMM yyyy}", new { @class = "form-control", disabled = "disabled" })
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-3 long">End Date</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.Detail.EndDate, "{0:dd MMMM yyyy}", new { @class = "form-control", disabled = "disabled" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-container">
                                    <table class="table table-bordered table-striped js-options-table fix-header" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Plant ID</th>
                                                <th>Plant City</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Plant)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.WERKS)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ORT01)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="changes">
                        <div class="table-container">
                            @Html.Partial("_ChangesHistoryTable", Model)
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!--delete-->
<input id="btn-delete-nppbkc" style="display: none" type="submit" class="btn btn-grey" data-toggle="modal" data-target=".delete-modal.Nppbkc" value="delete">
<div class="modal ems-modal fade delete-modal Nppbkc" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="NppbkcDelete();">Delete</button>
                <button type="button" class="btn btn-grey" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>