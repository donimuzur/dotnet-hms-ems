@using Sampoerna.EMS.Core
@model Sampoerna.EMS.Website.Models.NPPBKC.NPPBKCIViewModels

@section styles
    {

}

@section scripts {
   <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {

            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();


            // Apply the search

            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            
          
             @if (TempData[Constans.SubmitType.Save] != null)
            {
                @: alert('@TempData[Constans.SubmitType.Save]');
            }
             @if (TempData[Constans.SubmitType.Update] != null)
            {
                @: alert('@TempData[Constans.SubmitType.Update]');
            }
            @if (TempData[Constans.SubmitType.Delete] != null)
            {
                @: alert('@TempData[Constans.SubmitType.Delete]');
            }


           $('#MenuNPPBKC').addClass('active');

        });
    </script>
}


@{
    ViewBag.Title = "NPPBKC";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>

        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="mydata" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th class="toggle-row"> Filter </th>
                            <th> NPPBKC ID </th>
                            <th> Address </th>
                            <th> City Alias</th>
                            <th> Region Office of DGCE </th>
                            <th> Text to </th>
                            <th> Deleted </th>

                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> Action </th>
                            <th> NPPBKC ID </th>
                            <th> Address </th>
                            <th> City Alias</th>
                            <th> Region Office of DGCE </th>
                            <th> Text to </th>
                            <th> Deleted </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Detail", "NPPBKC", new { id = item.VirtualNppbckId })"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit", "NPPBKC", new { id = item.VirtualNppbckId })"><i class="fa fa-pencil-square-o"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NppbckNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CityAlias)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegionOfficeOfDGCE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TextTo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Is_Deleted)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


