@model Sampoerna.EMS.Website.Models.NPPBKC.NPPBKCIViewModels

@section styles
    {
    
}

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();
            

            // Apply the search

            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();

          
            $('#MenuNPPBKC').addClass('active');

        });
    </script>
}


@{
    ViewBag.Title = "NPPBKC";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="mydata" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                           
                            <th class="toggle-row"> Filter </th>
                            <th> NPPBKC ID </th>
                            <th> Address </th>
                            <th> City Alias</th>
                            <th> Region Office of DGCE </th>
                            <th> Text to </th>

                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> Action </th>
                            <th> NPPBKC ID </th>
                            <th> Address </th>
                            <th> City Alias</th>
                            <th> Region Office of DGCE </th>
                            <th> Text to </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                        <tr>
                            <td>
                                <a href="@Url.Action("Detail", "Plant", new {id = item.NPPBKC_ID})"><i class="fa fa-eye"></i></a>
                                <a href="@Url.Action("Edit", "NPPBKC", new { id = item.NPPBKC_ID })"><i class="fa fa-pencil-square-o"></i></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NPPBKC_NO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ADDR1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CITY_ALIAS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.REGION_OFFICE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TEXT_TO)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


