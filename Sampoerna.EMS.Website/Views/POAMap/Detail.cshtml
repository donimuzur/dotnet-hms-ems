@using Sampoerna.EMS.Core
@model Sampoerna.EMS.Website.Models.POAMap.PoaMapDetailViewModel


@{
    ViewBag.Title = "Detail POA Map";
}

@using (Html.BeginForm("Delete", "POAMap", null, FormMethod.Post, new { @class = "form-excise", role = "form" }))
{

    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3>POA Map</h3>
                <div class="action-button">
                    <button class="btn btn-blue">Delete</button>
                    <input type="button" value="Cancel" class="btn btn-grey" id="btnCancel" />
                </div>
            </div>
        </div>
    </div>

    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">

                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                   Detail POA Map
                                    <i class="fa fa-caret-down"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <form class="form-excise" role="form">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <label class="col-md-2">NPPBKC ID<span class="red">*</span></label>
                                                <div class="col-md-4">
                                                    @Html.TextBox("nppbcklist", Model.PoaMap.NPPBKC_ID, new { @class = "form-control" })
                                                    @Html.HiddenFor(x=>x.PoaMap.POA_MAP_ID)

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <label class="col-md-2">Plant<span class="red">*</span></label>
                                                <div class="col-md-4">
                                                    @Html.TextBox("plantlist", Model.PoaMap.WERKS + Constans.DelimeterSelectItem + Model.PoaMap.PLANT_NAME, new { @class = "form-control" })
                                                   
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <label class="col-md-2">POA<span class="red">*</span></label>
                                                <div class="col-md-4">
                                                    @Html.TextBox("poalist", Model.PoaMap.POA_ID + Constans.DelimeterSelectItem + Model.PoaMap.POA_NAME, new { @class = "form-control" })
                                                    



                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <span class="red">*</span> ) This Field Required
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

}
@section scripts {
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('#MenuPoaMap').addClass('active');

            $('#btnCancel').click(function (e) {
                location.href = '@Url.Action("Index", "POAMap")';
            });

         

        });

    </script>
}