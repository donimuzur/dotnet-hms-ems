                                    <div class="panel panel-default">
                                        <div class="panel-heading" role="tab" id="headingThree">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordionThree" href="#collapseThree" aria-expanded="true" aria-controls="collapse6">
                                                    Table
                                                    <i class="fa fa-caret-down"></i>
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                            <div class="panel-body">
                                                <div class="table-container">
                                                    <table class="table table-bordered table-striped js-options-table">
                                                        <thead>
                                                            <tr>
                                                                <th>No</th>
                                                                <th>No. CK-5</th>
                                                                <th>Date</th>
                                                                <th>Amount</th>
                                                                <th>Company</th>
                                                                <th>NPPBKC</th>
                                                                <th>Address</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tb-body-ck5-lack2">
                                                            @if (@Model.Lack2Model.Items != null)
                                                            {

                                                                for (int i = 0; i < @Model.Lack2Model.Items.Count; i++)
                                                                {
                                                                    <tr>
                                                                        @Html.HiddenFor(x => x.Lack2Model.Items[i].Lack2Id)
                                                                        @Html.HiddenFor(x => x.Lack2Model.Items[i].Id)
                                                                        @Html.HiddenFor(x => x.Lack2Model.Items[i].Ck5Id)
                                                                        <th>@(i + 1)</th>
                                                                        <th>@Model.Lack2Model.Items[i].Ck5Number</th>
                                                                        <th>@Model.Lack2Model.Items[i].Ck5GIDate</th>
                                                                        <th>@Model.Lack2Model.Items[i].Ck5ItemQty</th>
                                                                        <th>@Model.Lack2Model.Items[i].CompanyName</th>
                                                                        <th>@Model.Lack2Model.Items[i].CompanyNppbkc</th>
                                                                        <th>@Model.Lack2Model.Items[i].CompanyAddress</th>
                                                                    </tr>

                                                                }

                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                    <div class="panel-group" id="accordionFour" role="tablist" aria-multiselectable="true">
                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="headingFour">
                                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordionFour" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                                                        Status
                                                        <i class="fa fa-caret-down"></i>
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="collapseFour" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingFour">
                                                <div class="panel-body">
                                                    <div class="form-excise" role="form">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="row">
                                                                    <label class="col-md-4">Status Gov<span class="red">*</span></label>
                                                                    <div class="col-md-8">
                                                                        @if(Model.Lack2Model.Status == Enums.DocumentStatus.Completed)
                                                                        {
                                                                            @Html.EnumDropDownListFor(model => model.Lack2Model.StatusGov, Model.StatusGovList, "Select", new {@class = "form-control"})
                                                                        }
                                                                        else
                                                                        {
                                                                            @Html.TextBox("gov-status", string.Empty, new { @class = "form-control", @disabled = "disabled" })

                                                                        }
