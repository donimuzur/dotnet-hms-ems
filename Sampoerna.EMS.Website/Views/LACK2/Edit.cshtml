@using Microsoft.Ajax.Utilities
@using Sampoerna.EMS.Core
@using Sampoerna.EMS.Website.Helpers
@model Sampoerna.EMS.Website.Models.LACK2.LACK2CreateViewModel

@{
    ViewBag.Title = "Edit LACK2";
    
}



@using (@Html.BeginForm("Edit", "LACK2", FormMethod.Post,  new { @id="form-lack2-edit", @class = "form-excise", role = "form",enctype = "multipart/form-data"  }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.IsSaveSubmit)
    @Html.HiddenFor(x => x.Lack2Model.Lack2Id)
    @Html.HiddenFor(x=>x.Lack2Model.CreatedBy)
    @Html.HiddenFor(x=>x.Lack2Model.CreatedDate)
