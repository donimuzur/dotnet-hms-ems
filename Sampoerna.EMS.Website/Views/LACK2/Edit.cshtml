    @Html.HiddenFor(x => x.Lack2Model.ApprovedDateManager)
    @Html.HiddenFor(x => x.Lack2Model.RejectedBy)
    @Html.HiddenFor(x => x.Lack2Model.RejectedDate)
    @Html.HiddenFor(x=>x.Lack2Model.Status)
   

    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3>LACK-2 Form</h3>
                <label class="status">@Model.Lack2Model.StatusName</label>
                <div class="action-button">
                    @if (Model.AllowGovApproveAndReject)
                    {
                        <input type="button" class="btn btn-blue" value="Save" id="btnSaveGovStatus" />
                    }
                    else
                    {
                        <input type="submit" class="btn btn-blue" value="Save" />
