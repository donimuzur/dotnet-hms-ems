                                              : Html.DropDownListFor(model => model.SearchView.PeriodYear, Model.SearchView.PeriodYearList, "All", new { @class = "form-control selectreset" }))

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Document Status</label>
                                        <div class="col-md-8">
                                            @Html.EnumDropDownListFor(model => model.SearchView.DocumentStatus, Model.SearchView.DocumentStatusList, "All", new { @class = "form-control selectreset" })
