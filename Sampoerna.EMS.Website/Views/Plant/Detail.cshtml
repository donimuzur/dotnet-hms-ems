@model Sampoerna.EMS.Website.Models.PLANT.PlantFormModel


@{
    ViewBag.Title = "Detail Master Plant";
    var isCheckYes = Model.Detail.IsMainPlant ? new { @checked = "checked", @id="radio1"} : null;
    var isCheckNo = Model.Detail.IsMainPlant ? null : new { @checked = "checked", @id = "radio2" };
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Update Master Plan</h3>
            <div class="action-button">
                <a href="@Url.Action("Index", "Plant")" class="btn btn-grey">Back</a>
            </div>
        </div>
    </div>
</div>
<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Update Master Plant
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <form class="form-excise" role="form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">Plant Id</label>
                                            <div class="col-md-9">
                                                @Html.DropDownListFor(model => model.Detail.WerksT1001W.PLANT_ID, Model.PlantIdListItems, "Select", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.PlantId)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">NPPBKC NO</label>
                                            <div class="col-md-9">
                                                @Html.DropDownListFor(model => model.Detail.NppbkcNo, Model.Nppbkc, "Select", new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.NppbkcNo)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">Plant Description</label>
                                            <div class="col-md-9">
                                                @Html.TextAreaFor(model => model.Detail.PlantDescription, new { @class = "form-control", rows = "5", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.PlantDescription)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">Plant Address</label>
                                            <div class="col-md-9">
                                                @Html.TextAreaFor(model => model.Detail.Address, new { @class = "form-control", rows = "5", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.Address)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">Plant City</label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(model => model.Detail.City, new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.City)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">SKEPTIS</label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(model => model.Detail.Skeptis, new { @class = "form-control", @disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.Detail.Skeptis)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-4">Main Plant</label>
                                            <div class="col-md-2">
                                                @*@Html.CheckBoxFor(model => model.Detail.IsMainPlant, new { @class = "form-control" })*@
                                                @*@Html.RadioButtonFor(model => model.Detail.IsYes, new { @class = "form-control", @disabled = "disabled", @checked = "checked" })Yes*@
                                                @Html.RadioButtonFor(model => model.Detail.IsMainPlant, true, isCheckYes)Yes
                                            </div>
                                            <div class="col-md-2">
                                                @*@Html.RadioButtonFor(model => model.Detail.IsNo, new { @class = "form-control", @disabled = "disabled", @checked = "checked" })No*@
                                                @Html.RadioButtonFor(model => model.Detail.IsMainPlant, false, isCheckNo)No
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-3">Recieve Material</label>
                                            <div class="col-md-9">
                                                @Html.DropDownListFor(model => model.Detail.RecievedMaterialTypeId, Model.RecieveMaterialListItems, "Select", new { @class = "form-control", @disabled = "false" })
                                                @Html.ValidationMessageFor(model => model.Detail.RecievedMaterialTypeId)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $('#MenuMasterPlant').addClass('active');
        $(document).ready(function () {
            $('input:radio').attr('disabled', 'disabled');
            //$('#Detail_IsMainPlant').attr('disabled', 'disabled');
        });

    </script>

}
