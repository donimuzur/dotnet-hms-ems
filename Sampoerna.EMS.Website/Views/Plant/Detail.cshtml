@model Sampoerna.EMS.Website.Models.PLANT.PlantFormModel

@section scripts {
    <script type="text/javascript">
        $('#MenuMasterPlant').addClass('active');
    </script>
    <script type="text/javascript">
        $(window).load(function () {
            document.getElementById('PlantId').disabled = true;
            document.getElementById('NPPBKC_NO').disabled = true;
            document.getElementById('PlantDescription').disabled = true;
            document.getElementById('Address').disabled = true;
            document.getElementById('City').disabled = true;
            document.getElementById('Skeptis').disabled = true;
            document.getElementById('IsMainPlant').disabled = true;
            document.getElementById('RecieveMaterial').disabled = true;

        });
    </script>

}
@{
    ViewBag.Title = "Detail Master Plant";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Update Master Plan</h3>
            <div class="action-button">
                <a href="@Url.Action("Index", "Plant")" class="btn btn-grey">Cancel</a>
            </div>
        </div>
    </div>
</div>
<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-wrapper">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Detail Master Plant
                                    <i class="fa fa-caret-down"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <form class="form-excise" role="form">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">Plant Id</label>
                                                <div class="col-md-9">
                                                    @Html.DropDownListFor(model => model.Detail.PlantId, Model.PlantIdListItems, "Select", new { @class = "form-control", id = "PlantId" })
                                                    @Html.ValidationMessageFor(model => model.Detail.PlantId)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">NPPBKC NO</label>
                                                <div class="col-md-9">
                                                    @Html.DropDownListFor(model => model.Detail.NPPBKC.NPPBKC_NO, Model.Nppbkc, "Select", new { @class = "form-control", id = "NPPBKC_NO" })
                                                    @Html.ValidationMessageFor(model => model.Detail.NPPBKC.NPPBKC_NO)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">Plant Description</label>
                                                <div class="col-md-9">
                                                    @Html.TextAreaFor(model => model.Detail.PlantDescription, new { @class = "form-control", rows = "5", id = "PlantDescription" })
                                                    @Html.ValidationMessageFor(model => model.Detail.PlantDescription)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">Plant Address</label>
                                                <div class="col-md-9">
                                                    @Html.TextAreaFor(model => model.Detail.Address, new { @class = "form-control", rows = "5", id = "Address" })
                                                    @Html.ValidationMessageFor(model => model.Detail.Address)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">Plant City</label>
                                                <div class="col-md-9">
                                                    @Html.TextBoxFor(model => model.Detail.City, new { @class = "form-control", id = "City" })
                                                    @Html.ValidationMessageFor(model => model.Detail.Address)
                                                    @Html.ValidationMessageFor(model => model.Detail.City)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">SKEPTIS</label>
                                                <div class="col-md-9">
                                                    @Html.TextBoxFor(model => model.Detail.Skeptis, new { @class = "form-control", id = "Skeptis" })
                                                    @Html.ValidationMessageFor(model => model.Detail.Skeptis)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <label class="col-md-3">Is Main Plant</label>
                                                <div class="col-md-2">
                                                    @Html.CheckBoxFor(model => model.Detail.IsMainPlant, new { @class = "form-control", id = "IsMainPlant" })
                                                        @Html.ValidationMessageFor(model => model.Detail.IsMainPlant)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <label class="col-md-3">Recieve Material ID</label>
                                                    <div class="col-md-9">
                                                        @Html.DropDownListFor(model => model.Detail.GOODTYP.EXC_GOOD_TYP, Model.RecieveMaterialListItems, "Select", new { @class = "form-control", id = "RecieveMaterial" })
                                                        @Html.ValidationMessageFor(model => model.Detail.GOODTYP.EXC_GOOD_TYP)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


