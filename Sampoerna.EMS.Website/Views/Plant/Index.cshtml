@model Sampoerna.EMS.Website.Models.PLANT.PlantViewModel

@section styles
    {
    
}

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            $('.toggle-row').click(function () {

                var filter = $(".filters");
                filter.slideToggle(100).promise().done(function () {
                    //$this.find('span').text(function (_, value) {
                    //    return value == '-' ? '+' : '-';
                    //});
                });
            });

            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();


            // Apply the search

            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();
            
             @if (@ViewBag.Message != null)
            {
                @: alert('@ViewBag.Message');
            }
           
            $('#MenuMasterPlant').addClass('active');

        });
    </script>
}

@{
    ViewBag.Title = "MASTER PLANT";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
        </div>
    </div>
</div>
<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="mydata" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="toggle-row">Filter</th>
                                <th> NPPBKC ID </th>
                                <th> Plant ID </th>
                                <th> Plant Description </th>
                                <th> Main Plant </th>
                                <th> Plant Address </th>
                                <th> Plant City </th>
                            </tr>

                        </thead>
                        <thead class="filters">
                            <tr>
                            <th>Action</th>
                                <th> NPPBKC ID  </th>
                                <th> Plant ID </th>
                                <th> Plant Description </th>
                                <th> Main Plant </th>
                                <th> Plant Address </th>
                                <th> Plant City </th>
                            </tr>

                        </thead>

                        <tbody>

                            @foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Detail", "Plant", new {id = item.PLANT_ID})"><i class="fa fa-eye"></i></a>
                                        <a href="@Url.Action("Edit", "Plant", new {id = item.PLANT_ID})"> <i class="fa fa-pencil-square-o"></i></a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZAIDM_EX_NPPBKC.NPPBKC_NO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WERKS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CITY),
                                        @Html.DisplayFor(modelItem => item.NAME1)

                                    </td>
                                    <td>
                                        @if (!item.IS_MAIN_PLANT.HasValue)
                                        {
                                            item.IS_MAIN_PLANT = false;
                                        }
                                        @Html.CheckBoxFor(modelItem => item.IS_MAIN_PLANT.Value)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ADDRESS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CITY)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

