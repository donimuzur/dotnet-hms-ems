@model Sampoerna.EMS.Website.Models.PLANT.PlantViewModel
    
@{
    ViewBag.Title = "MASTER PLANT";
}

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>HEADER FOOTER</h3>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="mydata" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="toggle-row">Filter</th>
                            <th> NPPBKC ID </th>
                            <th> Plant ID </th>
                            <th> Plant Description </th>
                            <th> Main Plant </th>
                            <th> Plant Address </th>
                            <th> Plant City </th>
                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th>Action</th>
                            <th> NPPBKC ID  </th>
                            <th> Plant ID </th>
                            <th> Plant Description </th>
                            <th> Main Plant </th>
                            <th> Plant Address </th>
                            <th> Plant City </th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td class="action">
                                    <a href="@Url.Action("Detail", "Plant", new { id = item.PlantId })"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit", "Plant", new { id = item.PlantId })"><i class="fa fa-pencil-square-o"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NPPBKC_NO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Werks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City),
                                    @Html.DisplayFor(modelItem => item.Name1)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => item.IsMainPlant)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {

            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');
                }
            });

            // DataTable
            var table = $('#mydata').DataTable();


            // Apply the search

            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();
            
            @if (@ViewBag.Message != null)
            {
                @: alert('@ViewBag.Message');
            }

            $('#MenuMasterPlant').addClass('active');
            
        });
    </script>
}
