@model Sampoerna.EMS.Website.Models.CK4C.Ck4CIndexDocumentListViewModel
@using Sampoerna.EMS.Website.Helpers

<div id="information" class="tab-pane active" role="tabpanel">
    <div class="tab-wrapper">
        <div aria-multiselectable="true" role="tablist" id="accordion" class="panel-group">
            <div class="panel panel-default">
                <div id="headingOne" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapseOne" aria-expanded="true" href="#collapseOne" data-parent="#accordion" data-toggle="collapse">
                            CK-4C Detail
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="headingOne" role="tabpanel" class="panel-collapse collapse in" id="collapseOne">
                    <div class="panel-body">
                        <div role="form" class="form-excise">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">CK-4C No</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.Ck4CId)
                                            @Html.HiddenFor(model => model.Details.Number)
                                            @Html.HiddenFor(model => model.Details.Status)
                                            @Html.HiddenFor(model => model.Details.CreatedBy)
                                            @Html.HiddenFor(model => model.Details.CreatedDate)
                                            @Html.TextBoxFor(model => model.Details.Number, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported On</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.ReportedOn, "{0:dd MMM yyyy}", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Company Code</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.CompanyName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Period</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.ReportedPeriod, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">POA</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.PoaList)
                                            @Html.TextBoxFor(model => model.Details.ApprovedByPoa, new { @class = "form-control", @disabled = "disabled", @id = "displayPoaList" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Month</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.ReportedMonthName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Year</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.ReportedYears, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Based on</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" id="basedPlant" checked value="1" disabled> Plant Id</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.PlantId)
                                            @Html.TextBoxFor(model => model.Details.PlantName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" id="basedNppbkc" value="2" disabled> NPPBKC</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Details.NppbkcId, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div aria-multiselectable="true" role="tablist" id="accordion-6" class="panel-group not-upload">
            <div class="panel panel-default">
                <div id="heading6" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse6" aria-expanded="true" href="#collapse6" data-parent="#accordion-6" data-toggle="collapse">
                            Item
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading6" role="tabpanel" class="panel-collapse collapse" id="collapse6">
                    <div class="panel-body">
                        <div class="table-container">
                            <table class="table table-bordered table-striped js-options-table">
                                <thead>
                                    <tr>
                                        <th>Production Date</th>
                                        <th>FA Code</th>
                                        <th>Brand Description</th>
                                        <th>Plant</th>
                                        <th>Tobacco Product Type</th>
                                        <th>HJE</th>
                                        <th>Tarif</th>
                                        <th>Content Per Pack</th>
                                        <th>Packed QTY</th>
                                        <th>Packed QTY In Pack</th>
                                        <th>Unpacked QTY</th>
                                        <th>Produced QTY</th>
                                        <th>UoM Produced QTY</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody id="tb-body-ck4c">
                                    @for (var i = 0; i < Model.Details.Ck4cItemData.Count; i++)
                                    {
                                        var item = Model.Details.Ck4cItemData[i];
                                        <tr>
                                            <td>@item.ProdDateName</td>
                                            <td>@item.FaCode</td>
                                            <td>@item.BrandDescription</td>
                                            <td>@item.PlantName</td>
                                            <td>@item.ProdType</td>
                                            <td class="number">@string.Format("{0:N2}", item.HjeIdr)</td>
                                            <td class="number">@string.Format("{0:N2}", item.Tarif)</td>
                                            <td class="number">@string.Format("{0:N2}", item.ContentPerPack)</td>
                                            <td class="number">@string.Format("{0:N2}", item.PackedQty)</td>
                                            <td class="number">@string.Format("{0:N2}", item.PackedInPack)</td>
                                            <td class="number">@string.Format("{0:N2}", item.UnpackedQty)</td>
                                            <td class="number">@string.Format("{0:N2}", item.ProdQty)</td>
                                            <td>@item.ProdQtyUom</td>
                                            <td>@item.Remarks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group" id="accordion-4" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingFour">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion-4" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                            Other
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                    <div class="panel-body">
                        <div class="form-excise" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Status Gov<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.GovApprovalActionType)
                                            @Html.EnumDropDownListFor(model => model.Details.StatusGoverment, Model.StatusGovList, "Select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Decree Date<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.Details.DecreeDate, "{0:dd MMM yyyy}", new { @class = "form-control" })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" id="divComment">
                                    <div class="row">
                                        <label class="col-md-4">Add Comment<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(model => model.Details.Comment, new { @rows = "5", @class = "col-md-9 GovReject" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Decree Doc<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            <div class="file-upload" id="poa-files">
                                                @if (Model.Details.Ck4cDecreeDoc != null)
                                                {
                                                    var count = 0;
                                                    foreach (var file in Model.Details.Ck4cDecreeDoc)
                                                    {
                                                        var idDoc = "Details_Ck4cUploadedDoc_" + count + "_";
                                                        var nameDoc = "Details.Ck4cUploadedDoc[" + count + "]";
                                                        <div class="row">
                                                            <div class="col-sm-10">
                                                                <i class="fa fa-file"></i>
                                                                <a href="@Url.Content(file.FILE_PATH)">@file.FILE_NAME</a>
                                                                <input type="hidden" id="@idDoc" name="@nameDoc" value="@Url.Content(file.FILE_PATH)|@file.FILE_NAME" />
                                                            </div>
                                                            <div class="col-sm-2">
                                                                <button class="btn btn-danger full" type="button" onclick="removeUploadButton(@count, $(this).closest('.row'))"><i class="fa fa-times"></i></button>
                                                            </div>
                                                        </div>
                                                        count++;
                                                    }
                                                }
                                            </div>
                                            <button type="button" class="btn btn-primary full" data-toggle="modal" data-target=".upload-file" id="Ck4cDoc">Add File</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div aria-multiselectable="true" role="tablist" id="accordion-7" class="panel-group not-upload">
            <div class="panel panel-default">
                <div id="heading7" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse7" aria-expanded="true" href="#collapse7" data-parent="#accordion-7" data-toggle="collapse">
                            Workflow History
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading7" role="tabpanel" class="panel-collapse collapse" id="collapse7">
                    <div class="panel-body">
                        <div class="table-container">
                            @Html.Partial("_WorkflowHistoryTable", Model.WorkflowHistory)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <span class="red">*</span> ) This Field Required
        </div>
    </div>
</div>

@Html.Partial("_DecreeDocCompleted")