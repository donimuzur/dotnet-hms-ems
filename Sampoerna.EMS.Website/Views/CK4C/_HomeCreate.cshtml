@model Sampoerna.EMS.Website.Models.CK4C.Ck4CIndexDocumentListViewModel
@using Sampoerna.EMS.Website.Helpers

<div id="information" class="tab-pane active" role="tabpanel">
    <div class="tab-wrapper">
        <div aria-multiselectable="true" role="tablist" id="accordion" class="panel-group">
            <div class="panel panel-default">
                <div id="headingOne" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapseOne" aria-expanded="true" href="#collapseOne" data-parent="#accordion" data-toggle="collapse">
                            CK-4C Detail
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="headingOne" role="tabpanel" class="panel-collapse collapse in" id="collapseOne">
                    <div class="panel-body">
                        <div role="form" class="form-excise">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">CK-4C No</label>
                                        <div class="col-md-8">
                                            <input type="hidden" id="CompanyId"/>
                                            <input type="hidden" id="PlantId" />
                                            <input type="hidden" id="NppbkcId" />
                                            <input type="hidden" id="PeriodId" />
                                            <input type="hidden" id="MonthId" />
                                            <input type="hidden" id="YearId" />
                                            @Html.TextBoxFor(model => model.Details.Number, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported On<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.Details.ReportedOn, "{0:dd MMM yyyy}", new { @class = "form-control" })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Company Code<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.CompanyId, Model.CompanyNameList, "select", new { @class = "form-control " })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Period<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.ReportedPeriod, Model.PeriodList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">POA</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.PoaList)
                                            @Html.TextBoxFor(model => model.Details.PoaList, new { @class = "form-control", @disabled = "disabled", @id = "displayPoaList" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Month<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.ReportedMonth, Model.MonthList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Year<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.ReportedYears, Model.YearList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Based on<span class="red">*</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" checked value="1"> Plant Id</label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.PlantId, Model.PlanList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" value="2"> NPPBKC</label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.NppbkcId, Model.NppbkcIdList, "select", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <input type="button" value="Generate" class="btn btn-blue full" id="btnGenerate" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div aria-multiselectable="true" role="tablist" id="accordion-2" class="panel-group not-upload">
            <div class="panel panel-default">
                <div id="heading6" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse6" aria-expanded="true" href="#collapse6" data-parent="#accordion-6" data-toggle="collapse">
                            Item
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading6" role="tabpanel" class="panel-collapse in" id="collapse6">
                    <div class="panel-body">
                        <div class="table-container"><label id="WipLabel" style="visibility: hidden">WIP per Brand will be displayed after saved</label>
                            <table class="table table-bordered table-striped js-options-table">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th style="display: none"></th>
                                        <th>Production Date (3)</th>
                                        <th>FA Code</th>
                                        <th>Brand Description (7)</th>
                                        <th>Plant</th>
                                        <th>Tobacco Product Type (4)</th>
                                        <th>HJE (9)</th>
                                        <th>Tarif</th>
                                        <th>Content Per Pack (8)</th>
                                        <th>Packed QTY (6)</th>
                                        <th>ZB: Only for SKT</th>
                                        <th>Packed - Adjusted: Only for TIS CF</th>
                                        <th>Packed QTY In Pack (10)</th>
                                        <th>Unpacked QTY (FA)</th>
                                        <th>Produced QTY (5)</th>
                                        <th>UoM Produced QTY</th>
                                        <th>Remarks (12)</th>
                                    </tr>
                                </thead>
                                <tbody id="tb-body-ck4c">
                                    <tr>
                                        <td> </td>
                                        <td style="display: none"></td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div aria-multiselectable="true" role="tablist" id="accordion-3" class="panel-group not-upload">
            <div class="panel panel-default">
                <div id="heading7" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse7" aria-expanded="true" href="#collapse7" data-parent="#accordion-7" data-toggle="collapse">
                            Workflow History
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading7" role="tabpanel" class="panel-collapse collapse" id="collapse7">
                    <div class="panel-body">
                        <div class="table-container">
                            <table class="table table-bordered table-striped js-options-table">
                                <thead>
                                    <tr>
                                        <th>Account Name</th>
                                        <th>Role</th>
                                        <th>Action</th>
                                        <th>Date</th>
                                        <th>Comment</th>
                                        <th>Created by</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <span class="red">*</span> ) This Field Required
        </div>
    </div>
</div>