@model Sampoerna.EMS.Website.Models.CK4C.Ck4CIndexDocumentListViewModel
@using Sampoerna.EMS.Website.Helpers
@using Sampoerna.EMS.Core

<div id="informationold" class="tab-pane" role="tabpanel">
    <div class="">
        <div aria-multiselectable="true" role="tablist" id="accordionOld" class="panel-group">
            <div class="panel panel-default">
                <div id="headingOneOld" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapseOneOld" aria-expanded="true" href="#collapseOneOld" data-parent="#accordionOld" data-toggle="collapse">
                            CK-4C Detail
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="headingOneOld" role="tabpanel" class="panel-collapse collapse in" id="collapseOneOld">
                    <div class="panel-body">
                        <div role="form" class="form-excise">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">CK-4C No</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.OldDetails.Ck4CId)
                                            @Html.TextBoxFor(model => model.OldDetails.Number, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported On</label>
                                        <div class="col-md-8">
                                            @if (Model.OldDetails.Status == Enums.DocumentStatus.WaitingForApproval && Model.AllowApproveAndReject)
                                            {
                                                <div class="input-group date">
                                                    @Html.TextBoxFor(model => model.OldDetails.ReportedOn, "{0:dd MMM yyyy}", new { @class = "form-control" })
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => model.OldDetails.ReportedOn, "{0:dd MMM yyyy}", new { @class = "form-control", @disabled = "disabled" })
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Company Code</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OldDetails.CompanyName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Period</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OldDetails.ReportedPeriod, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">POA</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.OldDetails.PoaList)
                                            @Html.TextBoxFor(model => model.OldDetails.ApprovedByPoa, new { @class = "form-control", @disabled = "disabled", @id = "displayPoaList" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Month</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OldDetails.ReportedMonthName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-6">
                                    <div class="row">
                                        <label class="col-md-4">Reported Year</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OldDetails.ReportedYears, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Based on</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-onOld" type="radio" id="basedPlantOld" checked value="1" disabled> Plant Id</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.OldDetails.PlantId)
                                            @Html.TextBoxFor(model => model.OldDetails.PlantName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-onOld" type="radio" id="basedNppbkcOld" value="2" disabled> NPPBKC</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OldDetails.NppbkcId, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div aria-multiselectable="true" role="tablist" id="accordion-6Old" class="panel-group">
        <div class="panel panel-default">
            <div id="heading6Old" role="tab" class="panel-heading">
                <h4 class="panel-title">
                    <a aria-controls="collapse6Old" aria-expanded="true" href="#collapse6Old" data-parent="#accordion-6Old" data-toggle="collapse">
                        Item
                        <i class="fa fa-caret-down"></i>
                    </a>
                </h4>
            </div>
            <div aria-labelledby="heading6" role="tabpanel" class="panel-collapse collapse" id="collapse6Old">
                <div class="panel-body">
                    <input id="btnExportCk4cItemOld" class="btn btn-blue" type="button" value="Export">
                    <div class="table-container">
                        <table class="table table-bordered table-striped js-options-table">
                            <thead>
                                <tr>
                                    <th>Production Date (3)</th>
                                    <th>FA Code</th>
                                    <th>Brand Description (7)</th>
                                    <th>Plant</th>
                                    <th>Tobacco Product Type (4)</th>
                                    <th>HJE (9)</th>
                                    <th>Tarif</th>
                                    <th>Content Per Pack (8)</th>
                                    <th>Packed QTY (6)</th>
                                    <th>ZB: Only for SKT</th>
                                    <th>Packed - Adjusted: Only for TIS CF</th>
                                    <th>Packed QTY In Pack (10)</th>
                                    <th>Unpacked QTY (FA)</th>
                                    <th>Unpacked QTY (Brand) (11)</th>
                                    <th>Produced QTY (5)</th>
                                    <th>UoM Produced QTY</th>
                                    <th>Remarks (12)</th>
                                </tr>
                            </thead>
                            <tbody id="tb-body-ck4cOld">
                                @for (var i = 0; i < Model.OldDetails.Ck4cItemData.Count; i++)
                                {
                                    var item = Model.OldDetails.Ck4cItemData[i];
                                    <tr>
                                        <td>@item.ProdDateName</td>
                                        <td>@item.FaCode</td>
                                        <td>@item.BrandDescription</td>
                                        <td>@item.PlantName</td>
                                        <td>@item.ProdType</td>
                                        <td class="number">@string.Format("{0:N2}", item.HjeIdr)</td>
                                        <td class="number">@string.Format("{0:N2}", item.Tarif)</td>
                                        <td class="number">@string.Format("{0:N2}", item.ContentPerPack)</td>
                                        <td class="number">@string.Format("{0:N2}", item.PackedQty)</td>
                                        <td class="number">@string.Format("{0:N2}", item.Zb)</td>
                                        <td class="number">@string.Format("{0:N2}", item.PackedAdjusted)</td>
                                        <td class="number">@string.Format("{0:N2}", item.PackedInPack)</td>
                                        <td class="number">@string.Format("{0:N2}", item.UnpackedQty)</td>
                                        <td class="number">@string.Format("{0:N2}", item.UnpackedQtyBrand)</td>
                                        <td class="number">@string.Format("{0:N2}", item.ProdQty)</td>
                                        <td>@item.ProdQtyUom</td>
                                        <td>@item.Remarks</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-group" id="accordion-4Old" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFourOld">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion-4Old" href="#collapseFourOld" aria-expanded="true" aria-controls="collapseFourOld">
                        Other
                        <i class="fa fa-caret-down"></i>
                    </a>
                </h4>
            </div>
            <div id="collapseFourOld" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFourOld">
                <div class="panel-body">
                    <div class="form-excise" role="form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">Status Gov</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.OldDetails.StatusGoverment, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">Decree Date</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.OldDetails.DecreeDate, "{0:dd MMM yyyy}", new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">Decree Doc</label>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            @if (Model.OldDetails.Ck4cDecreeDoc != null)
                                            {
                                                foreach (var file in Model.OldDetails.Ck4cDecreeDoc)
                                                {
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <i class="fa fa-file"></i>
                                                            <a onclick="openAttachment('@Url.Content(file.FILE_PATH)')">@file.FILE_NAME</a>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div aria-multiselectable="true" role="tablist" id="accordion-7Old" class="panel-group not-upload">
        <div class="panel panel-default">
            <div id="heading7Old" role="tab" class="panel-heading">
                <h4 class="panel-title">
                    <a aria-controls="collapse7Old" aria-expanded="true" href="#collapse7Old" data-parent="#accordion-7Old" data-toggle="collapse">
                        Workflow History
                        <i class="fa fa-caret-down"></i>
                    </a>
                </h4>
            </div>
            <div aria-labelledby="heading7Old" role="tabpanel" class="panel-collapse collapse" id="collapse7Old">
                <div class="panel-body">
                    <div class="table-container">
                        @Html.Partial("_WorkflowHistoryTable", Model.OldWorkflowHistory)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>