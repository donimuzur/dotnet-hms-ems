@model Sampoerna.EMS.Website.Models.CK4C.Ck4CIndexDocumentListViewModel
@{
    ViewBag.Title = "Ck4CCreateDocumentList";
}

@using (Html.BeginForm("Ck4CCreateDocumentList", "CK4C"))
{
    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3>CK-4C Form</h3>
                <label class="status">Draft</label>
                <div class="action-button">
                    <input type="submit" class="btn btn-blue" value="Save" />
                    <input type="button" value="Back" class="btn btn-grey" id="btnCancel" />
                </div>
            </div>
        </div>
    </div>

    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">
                <div role="tabpanel">

                    <!-- Nav tabs -->
                    <ul role="tablist" class="nav nav-tabs">
                        <li class="active" role="presentation"><a data-toggle="tab" role="tab" aria-controls="information" href="#information">Information</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        @Html.Partial("_HomeCreate")
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section scripts
{
    <script type="text/javascript" language="javascript" class="init">
    $(document).ready(function () {
        $('#btnCancel').click(function (e) {
            location.href = '@Url.Action("DocumentList", "CK4C")';
            });

        $("input[name='based-on']").click(function (e) {
                ChangeBasedOn(this.value);
            });
        });

        $('#MenuCk4cDocumentList').addClass('active');

        function ChangeBasedOn(value) {
            var IsDisabledPlant = false;
            var IsDisabledNppbkc = true;

            if(value == 2)
            {
                IsDisabledPlant = true;
                IsDisabledNppbkc = false;
            }

            $('#Details_PlantId').val('');
            $('#Details_NppbkcId').val('');
            $('#Details_PlantId').prop('disabled', IsDisabledPlant);
            $('#Details_NppbkcId').prop('disabled', IsDisabledNppbkc);
        }
    </script>
}