@model Sampoerna.EMS.Website.Models.CK4C.Ck4CIndexViewModel

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Dialy Production List</h3>
            <div class="action-button new">
                <a href="7.0-pbck3-pbck7-list-edit.html"><button class="btn btn-blue">UPLOAD</button></a>
            </div>
        </div>
    </div>
</div>

<div class="white-wrapper">
    <div role="form" class="form-excise">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <label class="col-md-4 long">Date</label>
                    <div class="col-md-8">
                        <div class="input-group date">
                            <input type="text" class="form-control">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <label class="col-md-4">Company</label>
                    <div class="col-md-8">
                        <select class="form-control">
                            <option>PT HM Sampoerna</option>

                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <label class="col-md-4">Plant ID</label>
                    <div class="col-md-8">
                        <select class="form-control">
                            <option>001 - Plant</option>

                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="last-form">
                <div class="col-md-4 col-md-offset-8">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-blue full">FILTER</button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-blue full">RESET</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">
                <table id="InLineEdit" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th> Date </th>
                            <th> Company </th>
                            <th> Plant</th>
                            <th> Finish Goods </th>
                            <th> Description </th>
                            <th> Quality </th>
                            <th> Uom </th>
                            <th class="toggle-row"> Action </th>

                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> Searching </th>
                            <th> Searching </th>
                            <th> Searching</th>
                            <th> Searching  </th>
                            <th> Searching </th>
                            <th> Searching </th>
                            <th> Filter </th>
                            <th></th>

                        </tr>
                    </thead>
                    <thead class="CreateNew">
                        <tr>
                            <td>
                                <input type="text" id="ReportedOn" class="input-group date fa fa-calendar">
                            </td>
                            <td><input type="text" id="CompanyName" /> </td>
                            <td><input type="text" id="ReportedOn" /> </td>
                            <td><input type="text" id="PlantId" /> </td>
                            <td><input type="text" id="FinishGoods" /> </td>
                            <td><input type="text" id="Description" /> </td>
                            <td><input type="text" id="Quality" /> </td>
                            <td><input type="text" id="Uom" /> </td>
                            <td class="action"> <button onclick="addRow($(this));" data-tooggle="tooltip" data-placement="top" title="Save" class="fa fa-save"></button></td>

                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Detail)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReportedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlantId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FinishGoods)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quality)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Uom)
                                </td>
                                <td class="action">
                                    <a href="#" data-tooggle="tooltip" data-placement="top" title="Edit"><i class=" fa fa-pencil-square-o"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts
{
<script src="~/Scripts/js/custom.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $('#MenuCk4cDailyProduction').addClass('active');
        var EditTable = $("#InLineEdit").dataTable();

        // Setup - add a text input to each footer cell
        $('#InLineEdit .filters th').each(function () {
            var idx = $(this).index();
            if (idx != 0 && idx != 0) {
                var title = $('#InLineEdit thead th').eq($(this).index()).text();
                $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

            }
        });
        
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });

    </script>
}
