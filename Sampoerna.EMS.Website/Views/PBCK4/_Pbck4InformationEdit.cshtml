                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingFour">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordionFour" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                        Feedback
                        <i class="fa fa-caret-down"></i>
                    </a>
                </h4>
            </div>
            <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                <div class="panel-body">
                    <div class="form-excise" role="form">
                        <div class="row">

                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">BACK-1 No</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.BACK1_NO, new { @disabled = "disabled", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">CK-3 No</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.CK3_NO, new { @disabled = "disabled", @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">BACK-1 Date</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.BACK1_DATE, "{0:dd MMM yyyy}", new { @disabled = "disabled", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">CK-3 Date</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.CK3_DATE, "{0:dd MMM yyyy}", new { @disabled = "disabled", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">BACK-1 Doc</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">CK-3 Doc</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">CK-3 Office Value</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.CK3_OFFICE_VALUE, new { @disabled = "disabled", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="panel-group" id="accordion-7" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading7">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion-7" href="#collapse7" aria-expanded="true" aria-controls="collapse7">
                            Workflow History
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapse7" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading7">
                    <div class="panel-body">
                        <div class="table-container">
                            @Html.Partial("_WorkflowHistoryTable", Model.WorkflowHistory)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
