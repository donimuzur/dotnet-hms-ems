
@model Sampoerna.EMS.Website.Models.BrandRegistrationTransaction.BrandRegistration.BrandRegistrationReqViewModel
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="desc">Brand Registration Request</h3>

            @if (!Model.EnableFormInput)
            {
                <label class="status">@Model.ViewModel.ApprovalStatusDescription.Value</label>
            }

            <div class="action-button">
                @if (Model.IsAdminApprover && ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString() == "Approve")
                {
                    <button type="button" class="btn btn-danger" id="ReviseButton" data-toggle="modal" data-target=".revise-modal.brandreq">Revise</button>
                    <button type="button" class="btn btn-success" id="ApproveButton" data-toggle="modal" data-target=".approve-modal.brandreq">Approve</button>
                }
                @if (Model.ShowActionOptions && Model.EnableFormInput)
                {
                    if (Model.EditMode)
                    {
                        if (!Model.ViewModel.IsSubmitted)
                        {
                            <input type="submit" class="btn btn-blue" value="Save" id="SaveButton">
                            <button type="button" class="btn btn-success" id="SubmitButton">Submit</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-grey" disabled>Submitted</button>
                        }
                    }
                    if (ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString() == "CreateBrandRegistration")
                    {
                        @*<input type="submit" class="btn btn-blue" value="Save" id="SaveButton">*@
                        <button type="button" class="btn btn-blue" id="SaveButton">Save</button>
                    }

                    if (ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString() != "ApproveBrand")
                    {
                        <a href="@Url.Action("IndexBrandRegistration", "BrandRegistrationTransaction")" class="btn btn-grey">Cancel</a>
                    }
                }
                else
                {
                    <a href="@Url.Action("IndexBrandRegistration", "BrandRegistrationTransaction")" class="btn btn-grey">Back</a>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @Html.LabelFor(model=>model.ViewModel.Registration_No, new { @id = "BrNumber", @class="status" })
            @*<label id="PdNumber"></label>*@
        </div>
    </div>
</div>

