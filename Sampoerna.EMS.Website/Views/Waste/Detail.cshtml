@model Sampoerna.EMS.Website.Models.Waste.WasteDetail

@{
    ViewBag.Title = "Detail";
}
@using (Html.BeginForm("Detail", "Waste", null, FormMethod.Post, new {@class = "form-excise", role = "form"}))
{
    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3>Waste Production Detail</h3>
                <div class="action-button">
                    <button class="btn btn-blue">Save</button>
                    <a href="@Url.Action("Index", "Waste")" class="btn btn-grey">Back</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">
                <div role="tabpanel">

                    <!-- Nav tabs -->
                    <ul role="tablist" class="nav nav-tabs">
                        <li class="active" role="presentation"><a data-toggle="tab" role="tab" aria-controls="information" href="#information">Information</a></li>
                        <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes Log</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="information" class="tab-pane active" role="tabpanel">
                            <div class="">
                                <div aria-multiselectable="true" role="tablist" id="accordion" class="panel-group">
                                    <div class="panel panel-default">
                                        <div id="headingOne" role="tab" class="panel-heading">
                                            <h4 class="panel-title">
                                                <a aria-controls="collapseOne" aria-expanded="true" href="#collapseOne" data-parent="#accordion" data-toggle="collapse">
                                                    Waste Production Detail
                                                    <i class="fa fa-caret-down"></i>
                                                </a>
                                            </h4>
                                        </div>
                                        <div aria-labelledby="headingOne" role="tabpanel" class="panel-collapse collapse in" id="collapseOne">
                                            <div class="panel-body">
                                                <div role="form" class="form-excise">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Company<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.DropDownListFor(model => model.CompanyCode, Model.CompanyCodeList, "All", new {@class = "form-control ", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Plant<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.DropDownListFor(model => model.PlantWerks, Model.PlantWerkList, "All", new {@class = "form-control ", id = "SearchInput_PlantId", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4"> Waste Production Date</label>
                                                                <div class="col-md-8">
                                                                    <div class="input-group date">
                                                                        @Html.TextBox("waste-date", Model.WasteProductionDate == null ? null : Convert.ToDateTime(Model.WasteProductionDate).ToString("dd MMM yyyy"), new {@class = "form-control", disabled = "disabled"})
                                                                        <span class="input-group-addon">
                                                                            <i class="fa fa-calendar"></i>
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Finish Good<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.DropDownListFor(model => model.FaCode, Model.FacodeList, "All", new {@class = "form-control", id = "SearchInput_BrandCe", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Brand Description</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.BrandDescription, new {@class = "form-control", disabled = "disabled", id = "test"})

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Maker Reject Cigarette (stick)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.MarkerStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Packer Reject Cigarette (stick)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.PackerStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Dust Waste QTY (gram)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.DustGramStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Floor Waste QTY (gram)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.FloorGramStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Dust Waste QTY (stick)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.DustStickStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Floor Waste QTY (stick)<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.FloorStickStr, new {@class = "decimal form-control", disabled = "disabled"})
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4"> Created By </label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.CreatedBy, new { @class = " form-control", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4"> Created Date </label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.CreatedDate, new { @class = " form-control", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="changes">
                            <div class="table-container">
                                @Html.Partial("_ChangesHistoryTable", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
{
    <script src="~/Scripts/thousand-separator.js"></script>

    <script type="text/javascript" language="javascript" class="init">
        $('#MenuCk4cWasteProduction').addClass('active');
    </script>
}




