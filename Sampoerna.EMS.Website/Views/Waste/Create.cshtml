@model Sampoerna.EMS.Website.Models.Waste.WasteDetail

@{
    ViewBag.Title = "Create";
}

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Dialy Production Form</h3>
            <label class="status">Draft</label>
            <div class="action-button">
                <button class="btn btn-blue">Save</button>
                <a href="@Url.Action("Index", "Waste")" class="btn btn-grey">Cancel</a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div role="tabpanel">

                <!-- Nav tabs -->
                <ul role="tablist" class="nav nav-tabs">
                    <li class="active" role="presentation"><a data-toggle="tab" role="tab" aria-controls="information" href="#information">Information</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div id="information" class="tab-pane active" role="tabpanel">
                        <div class="">
                            <div aria-multiselectable="true" role="tablist" id="accordion" class="panel-group">
                                <div class="panel panel-default">
                                    <div id="headingOne" role="tab" class="panel-heading">
                                        <h4 class="panel-title">
                                            <a aria-controls="collapseOne" aria-expanded="true" href="#collapseOne" data-parent="#accordion" data-toggle="collapse">
                                                CK-4C Detail
                                                <i class="fa fa-caret-down"></i>
                                            </a>
                                        </h4>
                                    </div>
                                    <div aria-labelledby="headingOne" role="tabpanel" class="panel-collapse collapse in" id="collapseOne">
                                        <div class="panel-body">
                                            <div role="form" class="form-excise">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Company<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.CompanyCode, Model.CompanyCodeList, "All", new { @class = "form-control " })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Plant<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.PlantWerks, Model.PlantWerksList, "All", new { @class = "form-control ", id = "SearchInput_PlantId" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Date<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                <div class="input-group date">
                                                                    @Html.TextBoxFor(model => model.WasteProductionDate, new { @class = "form-control" })
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Finish Good<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.FaCode, Model.FacodeList, "All", new { @class = "form-control", id = "SearchInput_BrandCe" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Brand Description</label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.BrandDescription, new { @class = "form-control", disabled = "disabled", id = "test" })

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Maker Reject Cigarette (sticks)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.MarkerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Packer Reject Cigarette (sticks)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PackerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Dust Waste QTY (gram)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PackerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Floor Waste QTY (gram)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PackerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Dust Waste QTY (stick)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PackerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Floor Waste QTY (stick)<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PackerRejectStickQty, new { @class = "decimal form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

}