@model Sampoerna.EMS.Website.Models.Waste.WasteViewModel
@{
    ViewBag.Title = "_WasteTableIndex";
}

<table id="WasteProduction" class="table table-striped table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="toggle-row"> Action </th>
            <th> Date </th>
            <th> Company </th>
            <th> Plant</th>
            <th> Finish Goods </th>
            <th> Description </th>
            <th> QtyPacked </th>
            <th> QtyUnpacked </th>
            <th> Uom </th>
        </tr>

    </thead>
    <thead class="filters">
        <tr>
            <th> Filter </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Details)
        {
            <tr>
                <td class="action">
                    <a href="@Url.Action("Detail", "production", new { companyCode = item.CompanyCode, plantWerk = item.PlantWerks, faCode = item.FaCode, productionDate = item.ProductionDate })" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-eye"></i></a>
                    <a href="@Url.Action("Edit", "production", new { companyCode = item.CompanyCode, plantWerk = item.PlantWerks, faCode = item.FaCode, productionDate = item.ProductionDate })" data-tooggle="tooltip" data-placement="top" title="Edit"><i class=" fa fa-pencil-square-o"></i></a>
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.WasteProductionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlantName)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.FaCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarkerRejectStickQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackerRejectStickQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DustWasteGramQty)
                </td>

            </tr>
        }
    </tbody>
</table>

