@model Sampoerna.EMS.Website.Models.Waste.WasteViewModel
@{
    ViewBag.Title = "_WasteTableIndex";
}

<table id="WasteProduction" class="table table-striped table-hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="toggle-row"> Action </th>
            <th> Company </th>
            <th> Plant </th>
            <th> Finish Goods </th>
            <th> Brand Description </th>
            <th> Reject Cigarette (sticks) </th>
            <th> Waste QTY (gram) </th>
            <th> Waste QTY (stick) </th>
            <th> Waste Production Date </th>
            <th> Created By - Date </th>
        </tr>

    </thead>
    <thead class="filters">
        <tr>
            <th> Filter </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th> </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Details.OrderByDescending(x => x.WasteProductionDate))
        {
            <tr>
                <td class="action">
                    <a href="@Url.Action("Detail", "Waste", new { companyCode = item.CompanyCode, plantWerk = item.PlantWerks, faCode = item.FaCode, wasteproductionDate = item.WasteProductionDate })" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-eye"></i></a>
                    <a href="@Url.Action("Edit", "Waste", new { companyCode = item.CompanyCode, plantWerk = item.PlantWerks, faCode = item.FaCode, wasteproductionDate = item.WasteProductionDate })" data-tooggle="tooltip" data-placement="top" title="Edit"><i class=" fa fa-pencil-square-o"></i></a>
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlantName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FaCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RejectCigaretteStick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WasteQtyGram)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WasteQtyStick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WasteProductionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy) - @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
            </tr>
        }
    </tbody>
</table>

