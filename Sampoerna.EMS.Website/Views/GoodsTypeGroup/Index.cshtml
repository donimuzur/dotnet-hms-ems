@model Sampoerna.EMS.Website.Models.GOODSTYPE.GoodsTypeGroupViewModel


@section styles
    {
    }

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();

            $('#MenuMasterGoodType').addClass('active');
        });
    </script>
}


@{
    ViewBag.Title = "Excisable Goods Type Group";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            <div class="action-button new">
                <a href="@Url.Action("Create", "GoodsTypeGroup")">
                    <button class="btn btn-blue">NEW</button>
                </a>
                @*<a data-toggle="modal" data-target=".menu-maping-type"><button class="btn btn-blue">NEW</button></a>*@
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div id="contenttable" class="table-container">

                <table id="mydata" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="toggle-row"> Filter </th>
                            <th> Group Name </th>
                            <th> Excisable Group Type </th>
                        </tr>
                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> Action </th>
                            <th> Group Name </th>
                            <th> Excisable Group Type </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                @*<td></td>*@
                                <td class="action">
                                    <a href="@Url.Action("Details", "GoodsTypeGroup", new { id = item.GoodsTypeId })"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit", "GoodsTypeGroup", new { id = item.GoodsTypeId })"><i class="fa fa-pencil-square-o"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupTypeName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>


