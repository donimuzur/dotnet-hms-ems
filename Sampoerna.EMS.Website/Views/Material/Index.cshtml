        function setupDataTables(blFirst) {

            // DataTable
            
            var table = null;
            if ($.fn.dataTable.isDataTable('#mydata')) {
                table = $('#mydata').DataTable();
                table.destroy();
            }

            table = $('#mydata').DataTable(
