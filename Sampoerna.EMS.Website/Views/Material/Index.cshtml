                                        "ClientDeletionSource": $("#SearchView_ClientDeletionSource").val()
        
            

            
                                    }
                                }
                            });
                        }
                    }
                });
            table.on('preXhr', function(e, settings, data) {
                $(".loading").show();
            });

            table.on('xhr', function(e, settings, data) {
                $(".loading").hide();
            });
        }
        
