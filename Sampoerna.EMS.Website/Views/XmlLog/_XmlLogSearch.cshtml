@model Sampoerna.EMS.Website.Models.XmlLog.XmlLogIndexViewModel

<div class="white-wrapper">
    <div class="form-excise" role="form">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <label class="col-md-4">File Name</label>
                    <div class="col-md-8">
                        @if (Model.FileNameList == null)
                        {
                            @Html.DropDownList("dropdown-name", Enumerable.Empty<SelectListItem>())
                        }
                        else
                        {
                            @Html.DropDownListFor(model => model.FileName, Model.FileNameList, "All", new { @class = "form-control selectreset" })
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <label class="col-md-4">Month</label>
                    <div class="col-md-8">
                        @if (Model.FileNameList == null)
                        {
                            @Html.DropDownList("dropdown-name", Enumerable.Empty<SelectListItem>())
                        }
                        else
                        {
                            @Html.DropDownListFor(model => model.Month, Model.MonthList, "All", new { @class = "form-control selectreset" })
                        }

                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-blue full">FILTER</button>
                    </div>
                    <div class="col-md-6">
                        <input class="btn btn-blue full" type="button" value="RESET" onclick="OnReset();" />
                    </div>
                </div>
            </div>
          
        </div>
        
        <div class="row">
          
        </div>
        
        <div class="row">
           
        </div>

          
        </div>
</div>



