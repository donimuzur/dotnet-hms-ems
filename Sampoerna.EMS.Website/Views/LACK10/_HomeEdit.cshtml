@model Sampoerna.EMS.Website.Models.LACK10.Lack10IndexViewModel
@using Sampoerna.EMS.Website.Helpers
<div id="information" class="tab-pane active" role="tabpanel">
    <div class="tab-wrapper">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            LACK-10 Detail
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">

                        <div class="form-excise" role="form">
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">LACK-10 No</label>
                                    <div class="col-md-8">
                                        <input type="hidden" id="CompanyId" value="@Model.Details.CompanyId" />
                                        <input type="hidden" id="PlantId" value="@Model.Details.PlantId" />
                                        <input type="hidden" id="NppbkcId" value="@Model.Details.NppbkcId" />
                                        <input type="hidden" id="MonthId" value="@Model.Details.PeriodMonth" />
                                        <input type="hidden" id="YearId" value="@Model.Details.PeriodYears" />
                                        @Html.HiddenFor(model => model.Details.Lack10Id)
                                        @Html.HiddenFor(model => model.Details.Lack10Number)
                                        @Html.HiddenFor(model => model.Details.Status)
                                        @Html.HiddenFor(model => model.Details.IsSaveSubmit)
                                        @Html.HiddenFor(model => model.Details.CreatedBy)
                                        @Html.HiddenFor(model => model.Details.CreatedDate)
                                        @Html.TextBoxFor(model => model.Details.Lack10Number, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">Company<span class="red">*</span></label>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.Details.CompanyId, Model.CompanyNameList, "select", new { @class = "form-control " })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">Period<span class="red">*</span></label>
                                    <div class="col-md-8">
                                        <div class="row">
                                            <div class="col-md-6">
                                                @Html.DropDownListFor(model => model.Details.PeriodMonth, Model.MonthList, "select", new { @class = "form-control" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.DropDownListFor(model => model.Details.PeriodYears, Model.YearList, "select", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label class="col-md-4">NPWP</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.Details.CompanyNpwp, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group" id="accordionTwo" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingTwo">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordionTwo" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            Information
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        <div class="form-excise" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Based on<span class="red">*</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" checked value="1"> Plant Id</label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.PlantId, Model.PlanList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4"><input name="based-on" type="radio" value="2"> NPPBKC</label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.Details.NppbkcId, Model.NppbkcIdList, "select", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Report Type<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.EnumDropDownListFor(model => model.Details.ReportType, Model.ReportTypeList, "select", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">POA</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Details.PoaList)
                                            @Html.TextAreaFor(model => model.Details.PoaList, new { @class = "form-control", @disabled = "disabled", @id = "displayPoaList" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Submission Date<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.Details.SubmissionDate, "{0:dd MMM yyyy}", new { @class = "form-control" })
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Reason<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(model => model.Details.Reason, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Remark<span class="red">*</span></label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(model => model.Details.Remark, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-4">
                                    <input type="button" value="Generate" class="btn btn-blue full" id="btnGenerate" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div aria-multiselectable="true" role="tablist" id="accordion-2" class="panel-group">
            <div class="panel panel-default">
                <div id="heading6" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse6" aria-expanded="true" href="#collapse6" data-parent="#accordion-6" data-toggle="collapse">
                            Item
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading6" role="tabpanel" class="panel-collapse in" id="collapse6">
                    <div class="panel-body">
                        <input id="btnExportCk4cItem" class="btn btn-blue" type="button" value="Export">
                        <div class="table-container">
                            <table class="table table-bordered table-striped js-options-table">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>FA Code</th>
                                        <th>Brand Description</th>
                                        <th>Plant</th>
                                        <th>Type</th>
                                        <th>Waste Value</th>
                                        <th>UOM</th>
                                    </tr>
                                </thead>
                                <tbody id="tb-body-lack10">
                                    @if (Model.Details.Lack10ItemData != null)
                                    {
                                        for (var i = 0; i < Model.Details.Lack10ItemData.Count; i++)
                                        {
                                            var item = Model.Details.Lack10ItemData[i];
                                            var rowCount = (i + 1);

                                            <tr>
                                                <td>@rowCount</td>
                                                <td><input name="Details.Lack10ItemData[@i].FaCode" type="hidden" value="@item.FaCode" />@item.FaCode</td>
                                                <td><input name="Details.Lack10ItemData[@i].BrandDescription" type="hidden" value="@item.BrandDescription" />@item.BrandDescription</td>
                                                <td><input name="Details.Lack10ItemData[@i].Werks" type="hidden" value="@item.Werks" /><input name="Details.Lack10ItemData[@i].PlantName" type="hidden" value="@item.PlantName" />@item.Werks - @item.PlantName</td>
                                                <td><input name="Details.Lack10ItemData[@i].Type" type="hidden" value="@item.Type" />@item.Type</td>
                                                <td class="number"><input name="Details.Lack10ItemData[@i].WasteValue" type="hidden" value="@item.WasteValue" />@string.Format("{0:N3}", item.WasteValue)</td>
                                                <td><input name="Details.Lack10ItemData[@i].Uom" type="hidden" value="@item.Uom" />@item.Uom</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div aria-multiselectable="true" role="tablist" id="accordion-3" class="panel-group not-upload">
            <div class="panel panel-default">
                <div id="heading7" role="tab" class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-controls="collapse7" aria-expanded="true" href="#collapse7" data-parent="#accordion-7" data-toggle="collapse">
                            Workflow History
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div aria-labelledby="heading7" role="tabpanel" class="panel-collapse collapse" id="collapse7">
                    <div class="panel-body">
                        <div class="table-container">
                            @Html.Partial("_WorkflowHistoryTable", Model.WorkflowHistory)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <span class="red">*</span> ) This Field Required
        </div>
    </div>
</div>