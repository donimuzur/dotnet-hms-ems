                                            </div>
                                            <div class="toggle-component">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.BLack1Number, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "1" })Lack1 Number
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.BCompanyCode, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "2" })Company Code
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.BCompanyName, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "3" })Company Name
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.BNppbkcId, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "4" })Nppbkc ID
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.ExportModel.BReceivingPlantId, new { @checked = "checked", @class = "checkbox checkexport", @datacolumn = "5" })Receiving Plant Id
                                                    </label>
                                                </div>
                                                <div class="checkbox">
