                                        @Html.HiddenFor(model => model.ExportModel.SupplierPlantId)
                                        @Html.HiddenFor(model => model.ExportModel.PeriodMonth)
                                        @Html.HiddenFor(model => model.ExportModel.PeriodYear)
                                        @Html.HiddenFor(model => model.ExportModel.DocumentStatus)
                                        @Html.HiddenFor(model => model.ExportModel.CreatedDate)
                                        @Html.HiddenFor(model => model.ExportModel.CreatedBy)
                                        @Html.HiddenFor(model => model.ExportModel.ApprovedDate)
                                        @Html.HiddenFor(model => model.ExportModel.ApprovedBy)
                                        @Html.HiddenFor(model => model.ExportModel.Creator)
                                        @Html.HiddenFor(model => model.ExportModel.Approver)
                                        <div class="row toggle">
