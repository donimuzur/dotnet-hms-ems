@model Sampoerna.EMS.Website.Models.LACK1.Lack1ItemViewModel
@using Sampoerna.EMS.Core

<div role="tabpanel" class="tab-pane active" id="information">
    <div class="tab-wrapper">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            LACK-1 Detail
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                    <div class="panel-body">
                        <div class="form-excise" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">LACK-1 No</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Lack1Number, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Company</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.Bukrs)
                                            @Html.TextBoxFor(model => model.Butxt, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Period</label>
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    @Html.HiddenFor(model => model.PeriodMonth)
                                                    @Html.TextBoxFor(model => model.PerionNameEng, new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model => model.PeriodYears, new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group" id="accordionTwo" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingTwo">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordionTwo" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            Information
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        <div class="form-excise" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Level</label>
                                        @Html.HiddenFor(model => model.Lack1Level)
                                        <div class="col-md-8">
                                            @if (Model.Lack1Level == Enums.Lack1Level.Nppbkc)
                                            {
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <input type="radio" name="lackLevelName" checked="checked" value="1" disabled="disabled"> NPPBKC
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <input type="radio" name="lackLevelName" value="2" disabled="disabled"> Plant
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <input type="radio" name="lackLevelName" value="1" disabled="disabled"> NPPBKC
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <input type="radio" name="lackLevelName" checked="checked" value="2" disabled="disabled"> Plant
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Is TIS To TIS Report</label>
                                        <div class="col-md-8">
                                            @Html.CheckBoxFor(model => model.IsTisToTisReport, new { @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">NPPBKC</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.NppbkcId, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Submission Date</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.SubmissionDate, "{0:dd MMM yyyy}", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Received Plant ID</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.LevelPlantId)
                                            @Html.HiddenFor(model => model.LevelPlantName)
                                            @Html.TextBoxFor(model => model.DisplayLevelPlantName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4 long">Excisable Goods Type</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.ExGoodsTypeId)
                                            @Html.TextBoxFor(model => model.ExGoodsTypeDesc, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Supplier</label>
                                        <div class="col-md-8">
                                            @Html.HiddenFor(model => model.SupplierPlant)
                                            @Html.HiddenFor(model => model.SupplierPlantId)
                                            @Html.HiddenFor(model => model.SupplierPlantAddress)
                                            @Html.HiddenFor(model => model.SupplierCompanyCode)
                                            @Html.HiddenFor(model => model.SupplierCompanyName)
                                            @Html.TextBoxFor(model => model.DisplaySupplierPlant, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Waste Amount</label>
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model => model.WasteQty, "{0:N0}", new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                                <div class="col-md-6">
                                                    @Html.HiddenFor(model => model.WasteUom)
                                                    @Html.TextBoxFor(model => model.WasteUomDesc, new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Return Amount</label>
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model => model.ReturnQty, "{0:N0}", new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                                <div class="col-md-6">
                                                    @Html.HiddenFor(model => model.ReturnUom)
                                                    @Html.TextBoxFor(model => model.ReturnUomDesc, new { @class = "form-control", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Note</label>
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(model => model.Noted, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group not-upload" id="accordionThree" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingThree">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordionThree" href="#collapseThree" aria-expanded="true" aria-controls="collapse6">
                            Table
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                    <div class="panel-body">
                        <div class="table-container lack-table" id="generated-data-container">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group" id="accordionFour" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingFour">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordionFour" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                            Status
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                    <div class="panel-body">
                        <div class="form-excise" role="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Status</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.GovStatusDescription, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Decree Date</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.DecreeDate, "{0:dd MMM yyyy}", new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Decree Doc</label>
                                        <div class="col-md-8">
                                            <div class="input-group disabled">
                                                @if (Model.Lack1Document != null)
                                                {
                                                    foreach (var file in Model.Lack1Document)
                                                    {
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <i class="fa fa-file"></i>
                                                                <a onclick="openAttachment('@Url.Content(file.FILE_PATH)')">@file.FILE_NAME</a>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group" id="accordion-7" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading7">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion-7" href="#collapse7" aria-expanded="true" aria-controls="collapse7">
                            Workflow History
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapse7" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading7">
                    <div class="panel-body">
                        <div class="table-container">
                            @Html.Partial("_WorkflowHistoryTable", Model.WorkflowHistory)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
