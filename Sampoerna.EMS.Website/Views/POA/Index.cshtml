@model Sampoerna.EMS.Website.Models.POA.POAViewModel

@section styles
    {
    <link rel="stylesheet" type="text/css" href="../../Scripts/DataTables-1.10.7/media/css/jquery.dataTables.css">
}

@section scripts {
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="../../Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 1) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" />');
                }
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
        });
    </script>
}


@{
    ViewBag.Title = "POA (Power of Attorney)";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            <div class="action-button new">
                @*<a href="@Url.Action("Create", "Virtual")">
                        <button class="btn btn-blue">NEW</button>
                    </a>*@
                <a data-toggle="modal" data-target=".menu-maping-type"><button class="btn btn-blue">NEW</button></a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-wrapper">
                <table id="mydata" class="table table-striped table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th> NO  </th>
                            <th> Action </th>
                            <th> ID Card </th>
                            <th> Name </th>
                            <th> Printed Name</th>
                            <th> Address </th>
                            <th> Phone </th>
                            <th> Title </th>
                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> NO  </th>
                            <th> Action </th>
                            <th> ID Card </th>
                            <th> Name </th>
                            <th> Printed Name</th>
                            <th> Address </th>
                            <th> Phone </th>
                            <th> Title </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.POA_ID_CARD)
                                </td>
                                <td>
                                    @if (item.USER != null) {
                                        @Html.DisplayFor(modelItem => item.USER.USERNAME)
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.POA_PRINTED_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.POA_ADDRESS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.POA_PHONE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TITLE)
                                </td>
                             
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


