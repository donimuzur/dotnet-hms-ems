@model Sampoerna.EMS.Website.Models.POA.POAFormModel

@{
    ViewBag.Title = "Update POA (Power of Attorney)";
}
@using (Html.BeginForm("Edit", "POA", null, FormMethod.Post, new { @class = "form-excise", role = "form",enctype = "multipart/form-data"  }))
{
    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="desc">POA <span>(Power of Attorney)</span></h3>
                <div class="action-button">
                    <input type="submit" class="btn btn-blue" value="Save" />
                    @{
                        var isActive = Model.Detail.Is_Active == "Yes" ? true : false;
                    }
                    <a href="javascript:void(0);" onclick="confirmDeletePOA() " class="btn btn-danger">@(isActive == true ? "DEACTIVE" : "ACTIVE")</a>

                    <a href="@Url.Action("Index", "POA")" class="btn btn-grey">Cancel</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">
                <div class="white-wrapper">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#information" aria-controls="information" role="tab" data-toggle="tab">Information</a></li>
                        <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes Log</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="information">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Update POA
                                                <i class="fa fa-caret-down"></i>
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">ID Card<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.HiddenFor(x => x.Detail.PoaId)
                                                            @Html.HiddenFor(x => x.Detail.Is_Active)
                                                            @Html.TextBoxFor(model => model.Detail.PoaIdCard, new { @class = "form-control", @maxlength = "22" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Login As<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.HiddenFor(x => x.Detail.UserId)
                                                            @Html.DropDownListFor(model => model.Detail.UserId, Model.Users, null, new { @class = "selectpicker form-control", disabled = "disabled" })

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Manager<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.DropDownListFor(model => model.Detail.ManagerId, Model.Managers, null, new { @class = "selectpicker form-control" })

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Printed Name<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.TextBoxFor(model => model.Detail.PoaPrintedName, new { @class = "form-control", @maxlength = "50" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">

                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Phone<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.TextBoxFor(model => model.Detail.PoaPhone, new { @class = "form-control", @maxlength = "30" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Email<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.TextBox("email", Model.Detail.Email, new { @class = "form-control", @maxlength = "35", @disabled = "disabled" })
                                                            @Html.HiddenFor(x => x.Detail.Email)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Title<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.TextBoxFor(model => model.Detail.Title, new { @class = "form-control", @maxlength = "50" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3"></div>
                                                    <div class="col-md-3">@Html.CheckBoxFor(model => model.Detail.IsExciser) <label>Exciser</label></div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-3">Address<span class="red">*</span></label>
                                                        <div class="col-md-9">
                                                            @Html.TextAreaFor(model => model.Detail.PoaAddress, new { @class = "form-control", rows = "5", id = "comment", @maxlength = "200" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="row">
                                                    <label class="col-md-4">SK Doc</label>
                                                    <div class="col-md-8">
                                                        <div class="file-upload" id="poa-files">
                                                            @if (Model.Detail.PoaSk != null)
                                                            {

                                                                foreach (var file in Model.Detail.PoaSk)
                                                                {
                                                                    <div class="row">
                                                                        <div class="col-sm-10">
                                                                            <a href="@Url.Content(file.FILE_PATH)">@file.FILE_NAME</a>
                                                                        </div>
                                                                        <div class="col-sm-2">
                                                                            <button class="btn btn-danger full" type="button" onclick="removeSK(@file.POA_SK_ID, '@Url.Action("RemoveSk", "POA")', this)"><i class="fa fa-times"></i></button>
                                                                        </div>
                                                                    </div>

                                                                }
                                                            }

                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <button class="btn btn-primary full" type="button" data-toggle="modal" data-target=".upload-file">Add File</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <span class="red">*</span> ) This Field Required
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="changes">
                            <div class="table-container">
                                @Html.Partial("_ChangesHistoryTable", Model)
                            </div>
                        </div>
                    </div>                      
                </div>
        </div>
    </div>
</div>
    @Html.Partial("_FileUpload", Model)
   <!--delete-->
    <input id="btn-delete-poa" style="display: none" type="submit" class="btn btn-grey" data-toggle="modal" data-target=".delete-modal.poa" value="delete">
    <div class="modal ems-modal fade delete-modal poa" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    @if (Model.Detail.Is_Active == "Yes")
                    {
                        <h4 class="modal-title">Deactive</h4>
                    }
                    else
                    {
                        <h4 class="modal-title">Active</h4>
                    }

                </div>
                <div class="modal-body">
                    Are you sure?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="poaDelete();">Yes</button>
                    <button type="button" class="btn btn-grey" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/poa/form.js"></script>
<script type="text/javascript">
        $('#MenuPOA').addClass('active');
       
    function OnChangeUser(id) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetUser", "POA")',
            data: { userId: id },
            success: function (data) {
                $('#Detail_PoaPhone').val(data.PHONE);
                $('#Detail_Email').val(data.EMAIL);
            }
        });
    }
    var poaDelete = function () {
        window.location = "@Url.Action("Delete", "POA", new {id = @Model.Detail.PoaId})";
    };
    var confirmDeletePOA = function () {
        $('#btn-delete-poa').click();
    };
</script>
}
 



