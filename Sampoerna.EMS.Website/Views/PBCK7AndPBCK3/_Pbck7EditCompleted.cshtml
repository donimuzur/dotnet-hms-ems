                                    <div class="row">
                                        <label class="col-md-4">NPPBKC ID</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.NppbkcId, new { @disabled = "disabled", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Lampiran</label>
                                        <div class="col-md-8">
                                            @*@Html.TextBox("_lampiran", Model.Lampiran, new { @class = "form-control" })*@
                                           @Html.TextBoxFor(model => model.Lampiran, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <label class="col-md-4">Plant ID</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.PlantId, new { @disabled = "disabled", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
