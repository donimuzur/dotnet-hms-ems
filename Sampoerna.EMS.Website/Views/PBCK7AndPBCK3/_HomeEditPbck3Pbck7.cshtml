                                        <label class="col-md-4"></label>
                                        <div class="col-md-8">


                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row">

                                        <label class="col-md-4"></label>
                                        <div class="col-md-8">

                                            @if (Model.Back1Documents != null)
                                            {
                                                foreach (var file in Model.Back1Documents)
                                                {
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <i class="fa fa-file"></i>
