            if ($("#ProductCode").length) {
                var productCode = $(this).find("option:selected").val();
                if (productCode == '') {
                    $('#ProductType').val('');
                    $('#ProductAlias').val('');
                } else {
                    ajaxGetProductCodeDetails('@Url.Action("ProductCodeDetail", "BrandRegistration")', { productId: productCode });
                }
            }

        });*@

        $("#ProductCode").change(function() {
            if ($("#ProductCode").length) {
                var productCode = $(this).find("option:selected").val();
                var goodTypeCode = $("#GoodType").find("option:selected").val();
                if (productCode == '05' && goodTypeCode == '02') {
                    $("#hje").html('HJE per Gram<span class="red">*</span>');
                } else {
                    $("#hje").html('HJE<span class="red">*</span>');
                }
            }
        });

        function ajaxGetProductCodeDetails(url, formData) {
            if (formData.productId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#ProductType').val(data.PRODUCT_TYPE);
                        $('#ProductAlias').val(data.PRODUCT_ALIAS);
                    }
                });
            }
        }


                @*$("#SeriesId").change(function() {
            if ($("#SeriesId").length) {
                var seriesCode = $(this).find("option:selected").val();
                if (seriesCode == '') {
                    $('#SeriesValue').val('');
                } else {
                    ajaxGetSeriesValue('@Url.Action("SeriesCodeDescription", "BrandRegistration")', { seriesId: seriesCode });
                }
            }

        });*@

        function ajaxGetSeriesValue(url, formData) {
            if (formData.seriesId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#SeriesValue').val(data);
                    }
                });
            }
        }


        $("#MarketId").change(function() {
            if ($("#MarketId").length) {
                var marketCode = $(this).find("option:selected").val();
                if (marketCode == '') {
                    $('#MarketDescription').val('');
                } else {
                    ajaxGetMarketDescription('@Url.Action("MarketCodeDescription", "BrandRegistration")', { marketId: marketCode });
                }
            }

        });

        function ajaxGetMarketDescription(url, formData) {
            if (formData.marketId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#MarketDescription').val(data);
                    }
                });
            }

        }

        $("#GoodType").change(function() {
            if ($("#GoodType").length) {
                var goodTypeCode = $(this).find("option:selected").val();
                if (goodTypeCode == '') {
                    $('#GoodTypeDescription').val('');
                } else {
                    ajaxGetGoodTypeDescription('@Url.Action("GoodTypeDescription", "BrandRegistration")', { goodTypeId: goodTypeCode });

                    var productCode = $("#ProductCode").find("option:selected").val();
                    if (productCode == '05' && goodTypeCode == '02') {
                        $("#hje").html('HJE per Gram<span class="red">*</span>');
                    } else {
                        $("#hje").html('HJE<span class="red">*</span>');
                    }
                }
            }

        });

        function ajaxGetGoodTypeDescription(url, formData) {
            if (formData.goodTypeId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#GoodTypeDescription').val(data);
                    }
                });
            }

        }

        $("#FaCode").change(function() {
            if ($("#FaCode").length) {
                var stickerCode = $(this).find("option:selected").val();
                $('#PlantId').html('');
                $('#PlantId').append('<option value="">select</option>');
                if (stickerCode != '') {
                    ajaxGetPlantByStickerCode(stickerCode);
                }
            }

        });
        
        $("#PlantId").change(function () {
            if ($("#PlantId").length) {
                var PlantId = $(this).find("option:selected").val();
                $('#CutFillerCode').html('');
                $('#CutFillerCode').append('<option value="">select</option>');
                if (PlantId != '') {
                    ajaxGetCutFillerCodeByPlant(PlantId);
                    ajaxGetBrandDescriptionFromMaterial();
                }
            }

        });
        

        function ajaxGetBrandDescriptionFromMaterial() {
            var plant = $("#PlantId").val();
            var faCode = $("#FaCode").val();
            
            if (plant != "" && faCode != "") {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetBrandMaterialDescription", "BrandRegistration")',
                    data: {
                        plant: plant,
                        faCode : faCode
                    },
                    success: function (data) {
                        if (data != null) {
                            $("#SAPBrandDescription").val(data.MATERIAL_DESC);
                        }
                    
                    }
                });
            }
            
        }

        function ajaxGetPlantByStickerCode(sc,isnew) {

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetPlantByStickerCode", "BrandRegistration")',
                data: { mn: sc },
                success: function(data) {

                    for (var i = 0; i < data.length; i++) {
                        $('#PlantId').append('<option value=' + data[i].Value + '>' + data[i].Value + '-' + data[i].Text + '</option>');
                    }
                    
                    if (isnew) {
                        $('#PlantId').val('@Model.PlantId');
                    }
                }
            });

        }

        function ajaxGetCutFillerCodeByPlant(plant) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetCutFillerCodeByPlant", "BrandRegistration")',
                data: { plant: plant },
                success: function (data) {

                    for (var i = 0; i < data.length; i++) {
                        $('#CutFillerCode').append('<option value=' + data[i].Value + '>' + data[i].Value + '</option>');
                    }
                }
            });
        }
        

    </script>
