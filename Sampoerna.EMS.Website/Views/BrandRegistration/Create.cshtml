                                                                <span class="input-group-addon">
                                                                    <i class="fa fa-calendar"></i>
                                                                </span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">Printing Price</label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.PrintingPriceValueStr, new { @class = "decimal form-control" })
                                                        </div>
                                                    </div>
                                                </div>
