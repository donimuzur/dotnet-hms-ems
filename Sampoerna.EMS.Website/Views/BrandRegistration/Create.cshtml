@section scripts {
    <script src="~/Scripts/thousand-separator.js"></script>

    <script type="text/javascript" language="javascript">
        $(document).ready(function() {

            $('.input-group.date').datepicker({
                dateFormat: 'dd mmm yyyy',
                toggleActive: true,
                defaultViewDate: { year: 2015, month: 06, day: 28 }
            });

            $('#MenuMasterBrandRegistration').addClass('active');

            $('#btnCancel').click(function(e) {
                location.href = '@Url.Action("Index", "BrandRegistration")';
            });
            
        });


        $("#PersonalizationCode").change(function() {
            if ($("#PersonalizationCode").length) {
                var personalizationCode = $(this).find("option:selected").val();
                if (personalizationCode == '') {
                    $('#PersonalizationCodeDescription').val('');
                } else {
                    ajaxGetPersonalizationCodeDescription('@Url.Action("PersonalizationCodeDescription", "BrandRegistration")', { personalizationId: personalizationCode });
                }
            }

        });

        function ajaxGetPersonalizationCodeDescription(url, formData) {
            if (formData.personalizationId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#PersonalizationCodeDescription').val(data);
                    }
                });
            }
        }

        $("#ProductCode").change(function() {
            if ($("#ProductCode").length) {
                var productCode = $(this).find("option:selected").val();
                if (productCode == '') {
                    $('#ProductType').val('');
                    $('#ProductAlias').val('');
                } else {
                    ajaxGetProductCodeDetails('@Url.Action("ProductCodeDetail", "BrandRegistration")', { productId: productCode });
                }
            }

        });

        function ajaxGetProductCodeDetails(url, formData) {
            if (formData.productId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#ProductType').val(data.PRODUCT_TYPE);
                        $('#ProductAlias').val(data.PRODUCT_ALIAS);
                    }
                });
            }
        }


        $("#SeriesId").change(function() {
            if ($("#SeriesId").length) {
                var seriesCode = $(this).find("option:selected").val();
                if (seriesCode == '') {
                    $('#SeriesValue').val('');
                } else {
                    ajaxGetSeriesValue('@Url.Action("SeriesCodeDescription", "BrandRegistration")', { seriesId: seriesCode });
                }
            }

        });

        function ajaxGetSeriesValue(url, formData) {
            if (formData.seriesId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#SeriesValue').val(data);
                    }
                });
            }
        }


        $("#MarketId").change(function() {
            if ($("#MarketId").length) {
                var marketCode = $(this).find("option:selected").val();
                if (marketCode == '') {
                    $('#MarketDescription').val('');
                } else {
                    ajaxGetMarketDescription('@Url.Action("MarketCodeDescription", "BrandRegistration")', { marketId: marketCode });
                }
            }

        });

        function ajaxGetMarketDescription(url, formData) {
            if (formData.marketId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#MarketDescription').val(data);
                    }
                });
            }

        }

        $("#GoodType").change(function() {
            if ($("#GoodType").length) {
                var goodTypeCode = $(this).find("option:selected").val();
                if (goodTypeCode == '') {
                    $('#GoodTypeDescription').val('');
                } else {
                    ajaxGetGoodTypeDescription('@Url.Action("GoodTypeDescription", "BrandRegistration")', { goodTypeId: goodTypeCode });
                }
            }

        });

        function ajaxGetGoodTypeDescription(url, formData) {
            if (formData.goodTypeId) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function(data) {
                        $('#GoodTypeDescription').val(data);
                    }
                });
            }

        }

    </script>
}