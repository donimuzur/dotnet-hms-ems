@model Sampoerna.EMS.Website.Models.BrandRegistration.BrandRegistrationCreateViewModel

@using (Html.BeginForm("Create", "BrandRegistration", null, FormMethod.Post, new { @class = "form-excise", role = "form" }))
{


    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
