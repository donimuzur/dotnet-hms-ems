                                                    <div class="row">
                                                        <label class="col-md-4">Convertion</label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.ConversionValueStr, new { @class = "decimalMaxFour form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">Status</label>
                                                        <div class="col-md-8">
                                                            @Html.EditorFor(model => model.IsActive, new { @class = "form-control" }) Active
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">SAP Data</label>
                                                        <div class="col-md-8">
                                                            @Html.EditorFor(model => model.IsFromSAP, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">Cut Filler Code</label>
                                                        <div class="col-md-8">
                                                            <select class="form-control" id="CutFillerCode" name="CutFillerCode">
                                                                <option value="">select</option>
                                                            </select>
                                                            @*@Html.TextBoxFor(model => model.CutFilterCode, new { @class = "form-control", @maxlength = "25" })*@
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <span class="red">*</span> ) This Field Required
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section scripts {
    <link rel="stylesheet" type="text/css" href="../../Content/themes/base/all.css">
    <script src="~/Scripts/thousand-separator.js"></script>

    <script type="text/javascript" language="javascript">
        $(document).ready(function() {
            $('.datepicker').datepicker({
                format: 'dd mmm yyyy'
            });
            $('.input-group.date').datepicker({
                dateFormat: 'dd mmm yyyy',
                toggleActive: true,
                defaultViewDate: { year: 2015, month: 06, day: 28 }
            });

            $('#MenuMasterBrandRegistration').addClass('active');

            $('#btnCancel').click(function(e) {
                location.href = '@Url.Action("Index", "BrandRegistration")';
            });
            $('#HjeValueStr').val(ThausandSeperator($('#HjeValueStr').val(), 2));
            $('#TariffValueStr').val(ThausandSeperator($('#TariffValueStr').val(), 2));
            $('#ConversionValueStr').val(ThausandSeperator($('#ConversionValueStr').val(), 2));
            $('#ConversionValueStr').val(ThausandSeperator($('#ConversionValueStr').val(), 2));
            $('#PrintingPriceValueStr').val(ThausandSeperator($('#PrintingPriceValueStr').val(), 2));
            $('#PersonalizationCode').change(function() {
                PersonalizationCodeOnChange();
            });

            ajaxBahanKemasan('@Url.Action("BahanKemasanList", "BrandRegistration")', null);
            
            if ($("#FaCode").val() != "") ajaxGetPlantByStickerCode('@Model.FaCode', true);
            
            ajaxGetCutFillerCodeByPlant('@Model.PlantId');
            
        });

        function ajaxBahanKemasan(url, formData) {
            $.ajax({
                type: 'POST',
                url: url,
                data: formData,
                success: function (data) {
                    var availableTags = [];
                    if (data) {
                        for (i = 1; i <= data.length; i++) {
                            availableTags.push(data[i - 1].Value);
                        }
                    }
                    $("#bahankemasan").autocomplete({
                        source: availableTags
                    });
                }
            });
        }

