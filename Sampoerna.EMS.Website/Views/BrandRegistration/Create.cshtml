                                                                    <i class="fa fa-calendar"></i>
                                                                </span>
                                                            </div>


                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">End Date<span class="red">*</span></label>
                                                        <div class="col-md-8">

                                                            <div class="input-group date">
                                                                @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control" })
                                                                <span class="input-group-addon">
                                                                    <i class="fa fa-calendar"></i>
                                                                </span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">Printing Price</label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.PrintingPrice, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label class="col-md-4">Convertion</label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.Conversion, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
