@model Sampoerna.EMS.Website.Models.BrandRegistration.BrandRegistrationIndexViewModel


@section scripts {
<script src="~/Scripts/js/custom.js"></script>
    <script type="text/javascript" language="javascript" class="init">
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#mydata .filters th').each(function () {
                var idx = $(this).index();
                if (idx != 0 && idx != 0) {
                    var title = $('#mydata thead th').eq($(this).index()).text();
                    $(this).html('<input type="text" placeholder="Search" style="width:100%" >');

                }
            });

            // DataTable
            var table = $('#mydata').DataTable();

            // Apply the search
            table.columns().eq(0).each(function (colIdx) {
                $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                    table
                        .column(colIdx)
                        .search(this.value)
                        .draw();
                });
            });
            $("#mydata_filter").hide();
            $('#mydata_length').hide();

            $('#MenuMasterBrandRegistration').addClass('active');
        });
    </script>
}


@{
    ViewBag.Title = "Brand Registration";
}
<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewBag.Title</h3>
            <div class="action-button new">
                <a href="@Url.Action("Create", "BrandRegistration")">
                    <button class="btn btn-blue">NEW</button>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">


            <div class="table-container">

                <table id="mydata" class="table cell-border display no-wrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="toggle-row"> Filter </th>
                            <th>Sticker Code</th>
                            <th>Plant</th>
                            <th>FA Code</th>
                            <th>Brand Name Registration<br>by CE Office C</th>
                            <th>Series Value</th>
                            <th>Conversion</th>
                            <th>Printing Price</th>
                            <th>Cut Filler Code</th>
                            <th> Deleted </th>
                        </tr>

                    </thead>
                    <thead class="filters">
                        <tr>
                            <th> Action </th>
                            <th>Sticker Code</th>
                            <th>Plant</th>
                            <th>FA Code</th>
                            <th>Brand Name Registration<br>by KBBPC</th>
                            <th>Series Value</th>
                            <th>Conversion</th>
                            <th>Printing Price</th>
                            <th>Cut Filler Code</th>
                            <th> Deleted </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td class="action">
                                    <a href="@Url.Action("Details", "BrandRegistration", new { plant = item.PlantName, facode = item.FaCode })" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit", "BrandRegistration", new { plant = item.PlantName, facode = item.FaCode })" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StickerCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlantName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FaCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BrandName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SeriesValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Conversion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrintingPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CutFilterCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsDeleted)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>






