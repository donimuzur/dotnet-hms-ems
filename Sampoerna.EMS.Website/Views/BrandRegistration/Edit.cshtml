@model Sampoerna.EMS.Website.Models.BrandRegistration.BrandRegistrationEditViewModel


@using (Html.BeginForm("Edit", "BrandRegistration", null, FormMethod.Post, new { @class = "form-excise", role = "form" }))
{

    <div class="container-wrap title-page">
        <div class="row">
            <div class="col-sm-12">
                <h3>Update Brand</h3>
                <div class="action-button">
                    <button class="btn btn-blue">Save</button>
                    <input type="button" value="Cancel" class="btn btn-grey" id="btnCancel" />

                </div>
            </div>
        </div>
    </div>


    <div class="container-wrap">
        <div class="row">
            <div class="col-sm-12">
                <div class="white-wrapper">
                    <div class="scroll">
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            Brand Registration
                                            <i class="fa fa-caret-down"></i>
                                        </a>
                                    </h4>
                                </div>
                                @Html.HiddenFor(model => model.IsFromSAP)
                                @if (Model.IsFromSAP)
                                {
                                     @Html.Partial("_EditSAP", Model)
                                }
                                else
                                {


                                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <form class="form-excise" role="form">
                                                <div class="row">

                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Stiker Code</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBox("sticker_code", Model.StickerCode, new { @class = "form-control", @maxlength = "18", @disabled = "disabled" })
                                                                @Html.HiddenFor(m=>m.StickerCode)
                                                             </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Plant</label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownList("plant", Model.PlantList, "Select", new {@class = "form-control", @disabled="disabled"})
                                                                @Html.HiddenFor(m => m.PlantId)
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">FA Code<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.FaCode, new { @class = "form-control", @maxlength = "18" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Personalization Code<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.PersonalizationCode, Model.PersonalizationCodeList, "Select", new { @class = "selectpicker form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Product Code<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.ProductCode, Model.ProductCodeList, "Select", new { @class = "selectpicker form-control" })
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4 long">Personalization Code Description</label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.PersonalizationCodeDescription, new {@rows = "5", @class = "form-control", @disabled = "disabled"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4 long">Data Element for Product Type</label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.ProductType, new {@rows = "5", @class = "form-control", @disabled = "disabled"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4 long">Brand Name Registration by KBBPC<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.BrandName, new { @rows = "5", @class = "form-control", @maxlength = "60" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4 long">Data Element for Product Type Alias</label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.ProductAlias, new {@rows = "5", @class = "form-control", @disabled = "disabled"})
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">SKEP No<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.SkepNo, new { @class = "form-control", @maxlength = "30" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">SKEP Date<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                <div class="input-group date">
                                                                    @Html.TextBoxFor(model => model.SkepDate, "{0:dd MMMM yyyy}", new {@class = "form-control"})
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Series Code<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.SeriesId, Model.SeriesList, "Select", new { @class = "selectpicker form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Series Value<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.SeriesValue, new {@class = "form-control", @disabled = "disabled"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Content<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.Content, new { @class = "form-control", @maxlength = "50" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Market Code<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.MarketId, Model.MarketCodeList, "Select", new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Market Description</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.MarketDescription, new {@class = "form-control", @disabled = "disabled"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Country Key<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.CountryId, Model.CountryCodeList, "Select", new { @class = "selectpicker form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">HJE<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(m=>m.HjeValueStr, new {  @class = "decimal form-control" })
                                                               

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">HJE Currency<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.HjeCurrency, Model.HjeCurrencyList, "Select", new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Tariff<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.Tariff, new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Tariff Currency<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.TariffCurrency, Model.TariffCurrencyList, "Select", new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Exciseable Goods Type<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.DropDownListFor(model => model.GoodType, Model.GoodTypeList, "Select", new { @class = "selectpicker form-control" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Colour<span class="red">*</span></label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.ColourName, new { @class = "form-control", @maxlength = "70" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4 long">Exciseable Goods Type Description</label>
                                                            <div class="col-md-8">
                                                                @Html.TextAreaFor(model => model.GoodTypeDescription, new {@rows = "5", @class = "form-control", @disabled = "disabled"})

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Start Date<span class="red">*</span></label>
                                                            <div class="col-md-8">

                                                                <div class="input-group date">
                                                                    @Html.TextBoxFor(model => model.StartDate, "{0:dd MMMM yyyy}", new { @class = "form-control" })
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </span>
                                                                </div>


                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">End Date<span class="red">*</span>  </label>
                                                            <div class="col-md-8">

                                                                <div class="input-group date">
                                                                    @Html.TextBoxFor(model => model.EndDate, "{0:dd MMMM yyyy}", new {@class = "form-control"})
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </span>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Printing Price</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.PrintingPrice, new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Convertion</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.Conversion, new {@class = "form-control"})
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Status</label>
                                                            <div class="col-md-8">
                                                                @Html.EditorFor(model => model.IsActive, new {@class = "form-control"}) Active
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="row">
                                                            <label class="col-md-4">Cut Filler Code</label>
                                                            <div class="col-md-8">
                                                                @Html.TextBoxFor(model => model.CutFilterCode, new { @class = "form-control", @maxlength = "25" })
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <span class="red">*</span> ) This Field Required
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@section scripts {
<script src="~/Scripts/thousand-separator.js"></script>

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('.input-group.date').datepicker({
                toggleActive: true,
                defaultViewDate: { year: 2015, month: 06, day: 28 }
            });
        //$('.check-box').attr('disabled', 'disabled');
        $('#MenuMasterBrandRegistration').addClass('active');

        $('#btnCancel').click(function (e) {
            location.href = '@Url.Action("Index", "BrandRegistration")';
        });
            $('#HjeValueStr').val(ThausandSeperator($('#HjeValueStr').val(), 2));
     
    });
        

    </script>
}