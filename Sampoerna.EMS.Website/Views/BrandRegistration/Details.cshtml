@model Sampoerna.EMS.Website.Models.BrandRegistration.BrandRegistrationDetailsViewModel

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Brand Registration</h3>
            <div class="action-button">
                <a href="@Url.Action("Index", "BrandRegistration")">
                    <button class="btn btn-grey">Back</button>
                </a>
                @*@if (Model.IsAllowDelete)
                {
                    if (Model.BoolIsDeleted.HasValue && Model.BoolIsDeleted.Value)
                    {
                        <a href="javascript:void(0);" onclick="confirmDeleteBrand('@Url.Encode(Model.FaCode)') " class="btn btn-danger">Un-Delete</a>
                    }
                    else
                    {
                        <a href="javascript:void(0);" onclick="confirmDeleteBrand('@Url.Encode(Model.FaCode)') " class="btn btn-danger">Delete</a>
                    }
                    
                }*@
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div role="tabpanel">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#information" aria-controls="information" role="tab" data-toggle="tab">Information</a></li>
                    <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes Log</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="information">
                        <div class="tab-wrapper">
                            <div class="white-wrapper">

                                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                    <div class="panel panel-default">
                                        <div class="panel-heading" role="tab" id="headingOne">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                    Detail Brand Registration
                                                    <i class="fa fa-caret-down"></i>
                                                </a>
                                            </h4>
                                        </div>

                                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                            <div class="panel-body">
                                                <form class="form-excise" role="form">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Stiker Code<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("sticker_code", Model.StickerCode, new { @class = "form-control", @maxlength = "18", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Plant<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("plant", Model.PlantName,new { @class = "form-control", disabled = "disabled" })
                                                                   
                                                                    @*@Html.DropDownListFor(model => model.PlantId, Model.PlantList, "Select", new { @class = "selectpicker form-control" })*@
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">FA Code<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    
                                                                        @Html.TextBox("facode", Model.FaCode, new { @class = "form-control", disabled = "disabled" })
                                                                    
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Personalization Code</label>
                                                                <div class="col-md-8">
                                                                    @if (!String.IsNullOrEmpty(Model.PersonalizationCode) && !String.IsNullOrEmpty(Model.PersonalizationCodeDescription))
                                                                    {
                                                                        @Html.TextBox("percode", Model.PersonalizationCode + "-" + Model.PersonalizationCodeDescription, new {@class = "form-control", disabled = "disabled"})
                                                                    }
                                                                    else
                                                                    {
                                                                        @Html.TextBox("percode", "", new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Product Code<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @if (!String.IsNullOrEmpty(Model.ProductCode) && !String.IsNullOrEmpty(Model.ProductType) && !String.IsNullOrEmpty(Model.ProductAlias))
                                                                    {
                                                                        @Html.TextBox("prodcode", Model.ProductCode + "-" + Model.ProductType + " [" + Model.ProductAlias + "]", new { @class = "form-control", disabled = "disabled" })
                                                                    }else
                                                                    {
                                                                        @Html.TextBox("prodcode", "", new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                    
                                                                    
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Bahan Kemasan<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @if (!String.IsNullOrEmpty(Model.BahanKemasan))
                                                                    {
                                                                        @Html.TextBox("bahankemasan", Model.BahanKemasan, new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                    else
                                                                    {
                                                                        @Html.TextBox("bahankemasan", "", new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">


                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Brand Name Registration by KPPBC<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                        @Html.TextArea("brandname", Model.BrandName, new { @class = "form-control", disabled = "disabled" })
                                                                    
                                                                    </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">SKEP No<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                         @Html.TextBox("skepno", Model.SkepNo, new { @class = "form-control", disabled = "disabled" })
                                                                 
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">SKEP Date<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                       <div class="input-group">

                                                                            @Html.TextBox("skep-date", Model.SkepDate == null ? null : Convert.ToDateTime(Model.SkepDate).ToString("dd MMM yyyy"), new { @class = "form-control", disabled = "disabled" })
                                                                        </div>
                                                                    

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Series Code<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @if (Model.SeriesCode == "0")
                                                                    {
                                                                        @Html.TextBox("seriescode", "NO SERIES", new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                    else
                                                                    {
                                                                        @Html.TextBox("seriescode", Model.SeriesCode + "-" + Model.SeriesValue, new { @class = "form-control", disabled = "disabled" })
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Content<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                     @Html.TextBox("content", Model.Content, new { @class = "form-control", disabled = "disabled" })
                                                                   
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Market Code<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                     @Html.TextBox("marketcode", Model.MarketDescription, new { @class = "form-control", disabled = "disabled" })
                                                                   
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Country<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                     @Html.TextBox("country", Model.CountryCode, new { @class = "form-control", disabled = "disabled" })
                                                                    
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">HJE<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("hje", Model.HjeValueStr, new { @id = "hje", @class = "decimal form-control", disabled = "disabled" })
                                                                   
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">HJE Currency<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                   @Html.TextBox("hjecurrency", Model.HjeCurrency, new { @class = "form-control", disabled = "disabled" })
                                                                  
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Tariff<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                      @Html.TextBox("tariffvalue", Model.TariffValueStr, new { @class = "decimal form-control", @id = "tariff", disabled = "disabled" })
                                                                   
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Tariff Currency<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                     @Html.TextBox("tariffcurr", Model.TariffCurrency, new { @class = "form-control", disabled = "disabled" })
                                                                    
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Exciseable Goods Type<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("goodtype", Model.GoodType + "-" + Model.GoodTypeDescription, new { @class = "form-control", disabled = "disabled" })
                                                                    
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Colour<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("colour", Model.ColourName, new { @class = "form-control", disabled = "disabled" })
                                                                   
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="row">
                                                                <label class="col-md-2">Packed-Adjusted</label>
                                                                <div class="col-md-10">
                                                                    @Html.CheckBox("packedadjusted", Model.IsPackedAdjusted, new { disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Start Date<span class="red">*</span></label>
                                                                <div class="col-md-8">

                                                                        <div class="input-group">

                                                                             @Html.TextBox("start-date", Model.StartDate == null ? null : Convert.ToDateTime(Model.StartDate).ToString("dd MMM yyyy"), new { @class = "form-control", disabled = "disabled" })
                                                                        </div>
                                                                   


                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">End Date<span class="red">*</span></label>
                                                                <div class="col-md-8">

                                                                                         
                                                                        <div class="input-group">

                                                                            @Html.TextBox("start-date", Model.EndDate == null ? null : Convert.ToDateTime(Model.EndDate).ToString("dd MMM yyyy"), new { @class = "form-control", disabled = "disabled" })
                                                                        </div>
                                                                    
                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Printing Price</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("printing-price", Model.PrintingPrice, new { @class = "decimal form-control", id = "printingPrice", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Convertion</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("convertion", Model.Conversion, new { @class = "decimal form-control", id = "convertion", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Status</label>
                                                                <div class="col-md-8">
                                                                    @Html.CheckBox("active", Model.IsActive, new { disabled = "disabled" }) Active
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Cut Filler Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBox("cut-fillar", Model.CutFilterCode, new { @class = "form-control", @maxlength = "25", disabled = "disabled" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <span class="red">*</span> ) This Field Required
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>


                    <div role="tabpanel" class="tab-pane" id="changes">
                        <div class="table-container">
                            @Html.Partial("_ChangesHistoryTable", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

