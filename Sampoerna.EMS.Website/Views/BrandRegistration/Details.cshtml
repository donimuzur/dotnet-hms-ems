@model Sampoerna.EMS.Website.Models.BrandRegistration.BrandRegistrationDetailsViewModel

<div class="container-wrap title-page">
    <div class="row">
        <div class="col-sm-12">
            <h3>Brand Registration</h3>
            <div class="action-button">
                <a href="@Url.Action("Index", "BrandRegistration")">
                    <button class="btn btn-grey">Back</button>
                </a>
                @if (Model.IsDeleted.Equals("No"))
                {
                     <a href="javascript:void(0);" onclick="confirmDeleteBrand() " class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div role="tabpanel">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#information" aria-controls="information" role="tab" data-toggle="tab">Information</a></li>
                    <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes Log</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="information">
                        <div class="tab-wrapper">
                            <div class="white-wrapper">

                                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                    <div class="panel panel-default">
                                        <div class="panel-heading" role="tab" id="headingOne">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                    Detail Brand Registration
                                                    <i class="fa fa-caret-down"></i>
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                            <div class="panel-body">
                                                <form class="form-excise" role="form">
                                                    <div class="row">

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Stiker Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.StickerCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Plant</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.PlantName, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">FA Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.FaCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Personalization Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.PersonalizationCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Product Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Personalization Code Description</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.PersonalizationCodeDescription, new { @rows = "5", @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Data Element for Product Type</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.ProductType, new { @rows = "5", @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Brand Name Registration by CE Office</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.BrandName, new { @rows = "5", @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Data Element for Product Type Alias</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.ProductAlias, new { @rows = "5", @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">SKEP No</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.SkepNo, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">SKEP Date<span class="red">*</span></label>
                                                                <div class="col-md-8">
                                                                    <div class="input-group date">
                                                                        @Html.TextBoxFor(model => model.SkepDate, "{0:dd MMMM yyyy}", new { @class = "form-control", disabled = "disabled" })
                                                                        <span class="input-group-addon">
                                                                            <i class="fa fa-calendar"></i>
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Series Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.SeriesCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Series Value</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.SeriesValue, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Content</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.Content, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Market Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.MarketCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Market Description</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.MarketDescription, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Country Key</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.CountryCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">HJE</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.HjeValue, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="row">
                                                                    <label class="col-md-4">HJE Currency</label>
                                                                    <div class="col-md-8">
                                                                        @Html.TextBoxFor(model => model.HjeCurrency, new { @class = "form-control", @disabled = "false" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Tariff</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.Tariff, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Tariff Currency</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.TariffCurrency, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Exciseable Goods Type</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.GoodType, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Colour</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.ColourName, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4 long">Exciseable Goods Type Description</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextAreaFor(model => model.GoodTypeDescription, new { @rows = "5", @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Start Date</label>
                                                                <div class="col-md-8">

                                                                    <div class="input-group date">
                                                                        @Html.TextBoxFor(model => model.StartDate, "{0:dd MMMM yyyy}", new { @class = "form-control", disabled = "disabled" })
                                                                        <span class="input-group-addon">
                                                                            <i class="fa fa-calendar"></i>
                                                                        </span>
                                                                    </div>


                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">End Date </label>
                                                                <div class="col-md-8">

                                                                    <div class="input-group date">
                                                                        @Html.TextBoxFor(model => model.EndDate, "{0:dd MMMM yyyy}", new { @class = "form-control", disabled = "disabled" })
                                                                        <span class="input-group-addon">
                                                                            <i class="fa fa-calendar"></i>
                                                                        </span>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Printing Price</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.PrintingPrice, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Convertion</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.Conversion, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Status</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="row">
                                                                <label class="col-md-4">Cut Filler Code</label>
                                                                <div class="col-md-8">
                                                                    @Html.TextBoxFor(model => model.CutFilterCode, new { @class = "form-control", @disabled = "false" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>


                    <div role="tabpanel" class="tab-pane" id="changes">
                        <div class="table-container">
                            @Html.Partial("_ChangesHistoryTable", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--delete-->
<input id="btn-delete-brand" style="display: none" type="submit" class="btn btn-grey" data-toggle="modal" data-target=".delete-modal.brand" value="delete">
<div class="modal ems-modal fade delete-modal brand" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="brandDelete();">Delete</button>
                <button type="button" class="btn btn-grey" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('.check-box').attr('disabled', 'disabled');
            $('#MenuMasterBrandRegistration').addClass('active');
        });

        var deleteBrand = function () {
            if (confirm('Are You Sure')) {
                window.location = "@Url.Action("Delete", "BrandRegistration", new { plant = @Model.PlantName, facode=@Model.FaCode })";
            }

        };
    </script>
}

